    public partial class [TableName]List : Local.TabWindow
    {
        #region Constructor & Fields

        public [TableName]List()
        {
            InitializeComponent();
            Initialize();
        }

        #endregion Constructor & Fields

        #region Load Methods
        private void Initialize()
        {
[InitializeMethod]
        }

        public void LoadData()
        {
[LoadDataMethod]
        }
        #endregion Load Methods

        #region Event Handlers
        private void TabWindow_Loaded(object sender, RoutedEventArgs e)
        {
            LoadData();
        }


        private void ResetSearchForm(object sender, RoutedEventArgs e)
        {
[ResetSearchFormMethod]
        }

        private void Search(object sender, RoutedEventArgs e)
        {
[SearchVariales]
            ItemsDataGrid.ItemsSource = Data.[TableName]DB.Search[TableName]([SearchArguments]);
        }

        private void DeleteItem(object sender, RoutedEventArgs e)
        {
            if (ItemsDataGrid.SelectedIndex < 0 || ItemsDataGrid.SelectedItem.ToString() == "{NewItemPlaceholder}") return;

            try
            {
                MessageBoxResult result = MessageBox.Show("آیا از حذف مطمئن هستید؟", "تایید", MessageBoxButton.YesNo, MessageBoxImage.Question);

                if (result == MessageBoxResult.Yes)
                {
                    CRM.Data.[TableName]List item = ItemsDataGrid.SelectedItem as CRM.Data.[TableName]List;

                    DB.Delete<Data.[TableName]>(item.ID);
                    ShowSuccessMessage("[TableName] مورد نظر حذف شد");
                    LoadData();
                }
            }
            catch (Exception ex)
            {
                ShowErrorMessage("خطا در حذف [TableName]", ex);
            }
        }

        private void EditItem(object sender, RoutedEventArgs e)
        {
            if (ItemsDataGrid.SelectedIndex >= 0)
            {
                [TableName] item = ItemsDataGrid.SelectedItem as Data.[TableName];
                if (item == null) return;

                [TableName]Form window = new [TableName]Form(item.ID);
                window.ShowDialog();

                if (window.DialogResult == true)
                    LoadData();
            }
        }
        
        private void ItemsDataGrid_RowEditEnding(object sender, DataGridRowEditEndingEventArgs e)
        {
            try
            {
                Data.[TableName] item = e.Row.Item as Data.[TableName];

                item.Detach();
                DB.Save(item);

                Search(null, null);

                ShowSuccessMessage("[TableName] مورد نظر ذخیره شد");
            }
            catch (Exception ex)
            {
                e.Cancel = true;
                ShowErrorMessage("خطا در ذخیره [TableName]", ex);
            }
        }
        #endregion Event Handlers
    }
}
