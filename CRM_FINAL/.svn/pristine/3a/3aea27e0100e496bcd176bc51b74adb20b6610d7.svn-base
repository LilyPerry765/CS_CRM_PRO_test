<Local:PopupWindow x:Class="CRM.Application.ExtendedSpaceAndPower.V3SpaceAndPowerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        WindowStartupLocation="CenterScreen" MinHeight="150" MinWidth="150"
        Title="فرم انتخاب امکانات پایه">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="نوع تجهیزات : "/>
        <ComboBox x:Name="BasicEquipmentTypesComboBox" Grid.Row="0" Grid.Column="1"
                  SelectedValuePath="ID" DisplayMemberPath="Name" SelectionChanged="BasicEquipmentTypesComboBox_SelectionChanged"/>
        
        <Expander x:Name="EquipmentPropertiesExpander" Header="مشخصات تجهیزات"
                  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            
        </Expander>
        
        <Button x:Name="SaveButton" Content="ذخیره" Tag="Footer" Width="80" Click="SaveButton_Click"/>
        
    </Grid>
</Local:PopupWindow>
