<Local:RequestFormBase xmlns:Local="clr-namespace:CRM.Application.Local" 
                   x:Class="CRM.Application.Views.IssueWiringForm" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                   Title="صدور فرم سیم بندی" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:uc="clr-namespace:CRM.Application.UserControls" 
                   WindowStartupLocation="CenterScreen" 
                   Loaded="Window_Loaded">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.Resources>
                    <ResourceDictionary Source="/CRM.Application;Component/Resources/Styles/AutoComplete.Styles.xaml" />
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition  ></RowDefinition>
                    <RowDefinition  Height="3*"></RowDefinition>
                    <RowDefinition  Height="3*"></RowDefinition>
                    <RowDefinition  Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
            <Grid  Grid.Row="6" Name="ChooseTelInfo">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--<Button Grid.Row="0" Grid.Column="2" Tag="Footer" Content="ذخیره" HorizontalAlignment="Right" Name="saveButton" Click="saveButton_Click" />-->

                </Grid>
              
               
                
                <GroupBox Header="صدور فرم سیم بندی"  Grid.Row="8" >
                    <Grid Name="WiringIssueInfo" >
                        <Grid.RowDefinitions>

                            <RowDefinition  Height="30" />
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="شماره فرم سیم بندی:" Grid.Row="0" Grid.Column="0" />
                        <TextBox Text="{Binding Path=WiringNo}" Grid.Column="1" x:Name="WiringNoTextBox" IsEnabled="False" Height="30" VerticalAlignment="Top" />

                        <TextBlock Text="نوع :" Grid.Row="0" Grid.Column="2"/>
                        <ComboBox Grid.Row="0" Grid.Column="3" Name="WiringTypeComboBox" DisplayMemberPath="Name"  SelectedValuePath="Value" SelectedValue="{Binding WiringTypeID}" IsEnabled="False"   />

                        <TextBlock Text="تاریخ" Grid.Row="1" Grid.Column="0"/>
                        <cal:DatePicker x:Name="WiringIssueDate" SelectedDate="{Binding WiringIssueDate}" Grid.Row="1"  Grid.Column="1"/>
                        <TextBlock Text="وضعیت" Grid.Row="2"  Grid.Column="0" />

                        
                       <ComboBox Grid.Row="2" Grid.Column="1" Name="WiringStatusComboBox" DisplayMemberPath="StatusResult"  SelectedValuePath="StepStatusID"  Grid.ColumnSpan="3"   />


                    </Grid>
                </GroupBox>
           


            </Grid>
            
      </DockPanel>
       
    </ScrollViewer>
</Local:RequestFormBase>