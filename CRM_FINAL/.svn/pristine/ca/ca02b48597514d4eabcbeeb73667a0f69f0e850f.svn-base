<Local:PopupWindow xmlns:Local="clr-namespace:CRM.Application.Local" 
                   x:Class="CRM.Application.Views.popup" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   Title="تست صفحه">
    <StackPanel>
        
        <GroupBox Header="کاربر جاری">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="نام کاربر:" />
                <TextBox Grid.Column="1" Grid.Row="0" Text="قاسم علی آبادی" />
                <Label Grid.Column="2" Grid.Row="0" Content="مرکز:"/>
                <TextBox Grid.Column="3" Grid.Row="0" Text="بهشتی" />
                <Label Grid.Column="0" Grid.Row="1" Content="سمت:" />
                <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Text="کارمند واگذاری" />

            </Grid>
        </GroupBox>
    </StackPanel>

</Local:PopupWindow>
