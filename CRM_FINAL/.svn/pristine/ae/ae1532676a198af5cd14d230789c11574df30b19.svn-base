<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.ZeroStatusReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Local="clr-namespace:CRM.Application.Local"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             mc:Ignorable="d" >
    <Grid FlowDirection="RightToLeft" TextBoxBase.TextChanged="FiltersTextBox_TextChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>



        <GroupBox Grid.Row="0" Grid.Column="0" Header=" مشخصات مرکز ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="شهر : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox Grid.Row="0" Grid.Column="1" x:Name="CityComboBox" LostFocus="CityComboBox_LostFocus"/>

                <Label Grid.Row="0" Grid.Column="3" Content="مرکز : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox Grid.Row="0" Grid.Column="4" x:Name="CenterComboBox" LostFocus="CenterComboBox_LostFocus"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Grid.Column="0" Header=" انتخاب تاریخ بستن ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="از تاریخ : " VerticalAlignment="Center" Width="100"/>
                <cal:DatePicker Grid.Row="0" Grid.Column="1" x:Name="FromDatePicker"/>

                <Label Grid.Row="0" Grid.Column="3" Content="تا تاریخ : " Width="100"/>
                <cal:DatePicker Grid.Row="0" Grid.Column="4" x:Name="ToDatePicker"/>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Grid.Column="0" Header="انتخاب مشخصات گزارش">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="شماره تلفن : " VerticalAlignment="Center" Width="100"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TelephoneNoTextBox" />

                <Label Grid.Row="0" Grid.Column="3" Content="وضعیت انسداد:" VerticalAlignment="Center" Width="100"/>
                <UserControls:CheckableComboBox Grid.Row="0" Grid.Column="4" x:Name="BlockZeroStatusComboBox"/>

                <Label Grid.Row="2" Grid.Column="0" Content="نوع صفر  : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox Grid.Row="2" Grid.Column="1" x:Name="ZeroStatusComboBox"/>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="6" Grid.Column="0" Header=" انتخاب مشخصات مشترک ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="کد ملی مشترک : " VerticalAlignment="Center" Width="100"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="NationalCodeOrRecordNoTextBox" Tag="StringInput"/>

                <Label Grid.Row="0" Grid.Column="3" Content="شماره درخواست : " VerticalAlignment="Center" Width="100"/>
                <TextBox Grid.Row="0" Grid.Column="4" x:Name="RequestNoTextBox"/>
                
            </Grid>
        </GroupBox>

    </Grid>
    </Local:ReportBase>
