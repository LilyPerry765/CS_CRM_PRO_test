<UserControl x:Class="CRM.Application.UserControls.ADSLCutTemporary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
             mc:Ignorable="d" 
             d:DesignWidth="820">

    <DockPanel FlowDirection="RightToLeft">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="2" Name="ADSLTariffGroupBox" Margin="0,0,0,10">
                    <GroupBox.Header>
                        <Label Content="تعرفه ADSL" FontWeight="Bold" Foreground="#355E92"/>
                    </GroupBox.Header>
                    <Grid x:Name="TariffInfo" Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="تعرفه ADSL : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding Title}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="پهنای باند : " />
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding BandWidth}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="حجم : " />
                        <TextBox Grid.Row="1" Grid.Column="3" IsReadOnly="True" Text="{Binding TrafficLimitation}" />

                        <Label Grid.Row="2" Grid.Column="0" Content="مدت استفاده : " />
                        <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding Duration}" />

                        <Label Grid.Row="2" Grid.Column="2" Content="هزینه : " />
                        <TextBox Grid.Row="2" Grid.Column="3" IsReadOnly="True" Text="{Binding Price}" />

                    </Grid>
                </GroupBox>
                
                <GroupBox Grid.Row="3" Name="ADSLPortGroupBox" Margin="0,0,0,10">
                    <GroupBox.Header>
                        <Label Content="مشخصات پورت" FontWeight="Bold" Foreground="#355E92"/>
                    </GroupBox.Header>
                    <Grid x:Name="PortInfo" Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <Label Grid.Row="0" Grid.Column="0" Content="مشخصات MDF : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="MDFDescriptionTextBox" IsReadOnly="True"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="شماره پورت : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Name="PortNoTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="4" Name="ADSLCutGroupBox" Margin="0,0,0,10">

                    <GroupBox.Header>
                        <Label Content="قطع ADSL" FontWeight="Bold" Foreground="#355E92"/>
                    </GroupBox.Header>

                    <Grid x:Name="CutInfo" Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="علت قطع : " Name="CutReasonComboBoxLabel" />
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="CutTypeComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                        <!--<Label Grid.Row="0" Grid.Column="2" Content="تاریخ قطع : " />
                        <cal:DatePicker Grid.Row="0" Grid.Column="3" Name="CutDate" />-->
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="علت قطع :" Name="CutReasonTextBoxLabel"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="CutTypeTextBox" />
                        
                       
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="5" Margin="0,0,0,10" Name="CommentsGroupBox" >
                    <GroupBox.Header>
                        <Label Content=" نظرات" FontWeight="Bold" Foreground="#355E92"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="توضیحات : " Name="CommentCustomersLabel" />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="CommentCustomersTextBox" Height="50" />

                        <!--<Label Grid.Row="1" Grid.Column="0" Content="سالن : " Name="CutCommentLabel" />
                        <TextBox Grid.Row="1" Grid.Column="1" Name="CutCommentTextBox" Height="50" />

                        <Label Grid.Row="2" Grid.Column="0" Content="ناظر امور مشترکین : " Name="FinalCommentLabel" />
                        <TextBox Grid.Row="2" Grid.Column="1" Name="FinalCommentTextBox" Height="50" />-->


                    </Grid>
                </GroupBox>
                
            </Grid>
        </StackPanel>
    </DockPanel>

</UserControl>
