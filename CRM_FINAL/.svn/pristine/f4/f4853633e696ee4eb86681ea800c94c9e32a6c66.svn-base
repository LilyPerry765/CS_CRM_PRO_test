                    <DataGridComboBoxColumn Header=" شهر " Width="*" x:Name="CityColumn" SelectedValueBinding="{Binding Path=CityID, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ID" DisplayMemberPath="Name"/>
