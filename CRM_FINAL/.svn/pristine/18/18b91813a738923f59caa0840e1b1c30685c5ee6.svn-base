<Local:PopupWindow x:Class="CRM.Application.Views.Failure117FullView"
        xmlns:Local="clr-namespace:CRM.Application.Local" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   WindowStartupLocation="CenterScreen" 
                   Title=" ADSL" Height="Auto" Width="800" >

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <DockPanel FlowDirection="RightToLeft">
            <Grid Name="RequestInfoGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="مشخصات درخواست">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="شماره تلفن : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TelephoneNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="0" Grid.Column="2" Content="شماره پرونده : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding ID}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="تاریخ درخواست : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding InsertDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="نام مرکز : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Center}" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="0" Content="کدملی متقاضی / شماره ثبت : " />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CustomerNationalCode}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="2" Grid.Column="2" Content="نام متقاضی : " />
                        <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CustomerName}" IsReadOnly="True" />

                        <Label Grid.Row="3" Grid.Column="0" Content="شماره تماس گیرنده : " />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CallingNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="3" Grid.Column="2" Content="کد پستی : " />
                        <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding PostalCode}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="4" Grid.Column="0" Content="آدرس : " />
                        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Address}" IsReadOnly="True" />

                        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Vertical">

                            <Grid Name="TechnicalInfo">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="شماره کافو : " />
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CabinetNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="0" Grid.Column="2" Content="شماره ورودی کافو : " />
                                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding CabinetinputNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="1" Grid.Column="0" Content="شماره پست : " />
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PostNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                                <Label Grid.Row="1" Grid.Column="2" Content="شماره اتصالی پست : " />
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding PostEtesaliNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                            </Grid>

                            <Grid Name="BuchtsGrid">
                                <DataGrid DockPanel.Dock="Bottom" x:Name="BuchtsDataGrid"
                                      BorderThickness="0 1 0 0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserResizeColumns="True"
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      ItemsSource="{Binding}"                                
                                      IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header=" نوع " Width="5*" Binding="{Binding Path=BOOKHT_TYPE_NAME, UpdateSourceTrigger=PropertyChanged}" />
                                        <DataGridTextColumn Header=" ردیف " Width="5*" Binding="{Binding Path=RADIF, UpdateSourceTrigger=PropertyChanged}" />
                                        <DataGridTextColumn Header=" طبقه " Width="5*" Binding="{Binding Path=TABAGHE, UpdateSourceTrigger=PropertyChanged}" />
                                        <DataGridTextColumn Header=" اتصالی " Width="5*" Binding="{Binding Path=ETESALII, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>

                            <Grid Name="PCMTechnicalInfo">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Content="مشخصه PCM : " />

                                <Label Grid.Row="1" Grid.Column="1" Content="پورت : " />
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding PortPCM}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"  />

                                <Label Grid.Row="1" Grid.Column="3" Content="مدل : " />
                                <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding ModelPCM}" IsReadOnly="True" />

                                <Label Grid.Row="1" Grid.Column="5" Content="نوع : " />
                                <TextBox Grid.Row="1" Grid.Column="6" Text="{Binding TypePCM}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="2" Grid.Column="1" Content="راک : " />
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding RockPCM}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="2" Grid.Column="3" Content="شلف : " />
                                <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding ShelfPCM}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="2" Grid.Column="5" Content="کارت : " />
                                <TextBox Grid.Row="2" Grid.Column="6" Text="{Binding CardPCM}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                            </Grid>

                            <Grid Name="ADSLTechnicalInfo" Visibility="Collapsed" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="مشخصه ADSL : " />

                                <Label Grid.Row="0" Grid.Column="1" Content="ردیف : " />
                                <TextBox Grid.Row="0" Grid.Column="2" Name="RadifADSLTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"  />

                                <Label Grid.Row="0" Grid.Column="3" Content="طبقه : " />
                                <TextBox Grid.Row="0" Grid.Column="4" Name="TabagheADSLTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                                <Label Grid.Row="0" Grid.Column="5" Content="اتصالی : " />
                                <TextBox Grid.Row="0" Grid.Column="6" Name="EtesaliADSLTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                            </Grid>

                        </StackPanel>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="MDF بررسی درخواست">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام کاربر : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MDFAnalysisUser}" IsReadOnly="True" />

                        <Label Grid.Row="0" Grid.Column="2" Content=" تاریخ : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding MDFDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="وضعیت خط : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LineStatus}" IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="2" Content="زمان مصرفی بررسی درخواست : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding MDFAnalysisTime}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="توضیحات : " />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MDFComment}" IsReadOnly="True" Grid.ColumnSpan="3" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="شبکه هوایی">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام کاربر : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding NetworkUser}" />

                        <Label Grid.Row="0" Grid.Column="2" Content=" تاریخ : " />
                        <TextBox Grid.Row="0" Grid.Column="3" IsReadOnly="True" Text="{Binding NetworkDate}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="وضعیت خرابی : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FailureStatus}" IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="2" Content=" نام مامور : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding NetworkOfficer}" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="0" Content=" رنگ کابل : " />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CabelColor}" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="2" Content=" نوع کابل : " />
                        <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CabelType}" IsReadOnly="True" />

                        <Label Grid.Row="3" Grid.Column="0" Content=" تاریخ تحویل فرم به مامور : " />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GiveNetworkFormDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="3" Grid.Column="2" Content=" تاریخ بازگشت مامور : " />
                        <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding GetNetworkFormDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="4" Grid.Column="0" Content=" تاریخ ارجاع به کابل : " />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SendToCabelDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="4" Grid.Column="2" Content=" تاریخ اصلاح در کابل : " />
                        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding CabelDate}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="5" Grid.Column="0" Content="زمان مصرفی شبکه هوایی : " />
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding NetworkTime}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="6" Grid.Column="0" Content="توضیحات : " />
                        <TextBox Grid.Row="6" Grid.Column="1" IsReadOnly="True" Text="{Binding NetworkCommnet}" Grid.ColumnSpan="3" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Header="سالن دستگاه">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام کاربر : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding SaloonUser}" />

                        <Label Grid.Row="0" Grid.Column="2" Content=" تاریخ : " />
                        <TextBox Grid.Row="0" Grid.Column="3" IsReadOnly="True" Text="{Binding SaloonDate}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="توضیحات : " />
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding SaloonCommnet}" Grid.ColumnSpan="3" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="4" Header="MDF  تایید درخواست" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام کاربر : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding EndMDFUser}" />

                        <Label Grid.Row="0" Grid.Column="2" Content=" تاریخ : " />
                        <TextBox Grid.Row="0" Grid.Column="3" IsReadOnly="True" Text="{Binding EndMDFDate}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="نتیجه خرابی : " />
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding ResultAfterReturn}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="زمان مصرفی تایید درخواست : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding MDFConfirmTime}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="توضیحات : " />
                        <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding EndMDFCommnet}" Grid.ColumnSpan="3" />

                    </Grid>
                </GroupBox>
                
            </Grid>
        </DockPanel>
    </ScrollViewer>

    </Local:PopupWindow>