SELECT SW.[SPECIAL_WIRE_ID]
      ,SW.[SPECIAL_WIRE_NUMBER]
      ,SW.[FI_CODE]
      ,SW.[SPECIAL_WIRE_COUNTER]
      ,SW.[SEPCIAL_WIRE_LETTER_NUMBER] 
      ,VB.[BOOKHT_ID]
      ,VB.[FI_CODE]
      ,VB.[STATUS]
      ,VB.[VB_DATE]
      ,VB.[VB_HOUR]
      ,VB.[REQ_ID]
	  ,BB.[BOOKHT_ID]
      ,BB.[CEN_CODE]
      ,BB.[RADIF]
      ,BB.[TABAGHE]
      ,BB.[ETESALI]
      ,BB.[BOOKHT_TYPE]
      ,BB.[STATUS]
      ,BB.[BB_DATE]
      ,BB.[BB_HOUR]
    ,BB.[STATUS]
  FROM [ORACLECRM]..[SCOTT].[SPECIAL_WIRE] AS SW
  join [ORACLECRM]..[SCOTT].[V_BOOKHT] AS VB ON SW.[FI_CODE] = VB.[FI_CODE]
  JOIN [ORACLECRM]..[SCOTT].[BASE_BOOKHT] AS BB ON BB.[BOOKHT_ID] = VB.[BOOKHT_ID]
    WHERE SW.[FI_CODE]  = 110047675
GO