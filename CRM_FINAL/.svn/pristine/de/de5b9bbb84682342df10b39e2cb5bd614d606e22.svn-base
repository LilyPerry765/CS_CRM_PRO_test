<Local:UserControlBase 
              x:Class="CRM.Application.UserControls.RefundDepositUserControl"
              xmlns:Local="clr-namespace:CRM.Application.Local"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
             mc:Ignorable="d" Loaded="UserControlBase_Loaded">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="علت استرداد"/>
        <ComboBox Grid.Row="0" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="ID" x:Name="CauseOfRefundDepositComboBox" SelectedValue="{Binding CauseOfRefundDepositID}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="شماره سند حسابداری"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AccountingDocumentNumber}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="تاریخ استرداد" />
        <cal:DatePicker x:Name="RefundReplyLetterDateDatePicher" SelectedDate="{Binding RefundDate}"  Grid.Row="2" Grid.Column="1"/> 
        
        <Label Grid.Row="3" Grid.Column="0" Content="توضیحات"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Description}" Grid.ColumnSpan="2"/>
        
        
    </Grid>
</Local:UserControlBase>
