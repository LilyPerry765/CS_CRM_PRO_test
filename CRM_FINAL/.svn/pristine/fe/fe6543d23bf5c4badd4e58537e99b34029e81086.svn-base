<Local:PopupWindow 
        x:Class="CRM.Application.Views.RequestRejectDescriptionForm"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Loaded="PopupWindow_Loaded"
        Title="علت رد درخواست">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition Height="100" />


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="علت رد درخواست : " Grid.Row="0" Grid.Column="0"  Height="30"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="RequestRejectReasonComboBox" Height="30" DisplayMemberPath="Name" SelectedValuePath="ID"/>

        <Label Content="توضیحات : " Grid.Row="1" Grid.Column="0" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DescriptionTextBox" AcceptsReturn="True" AcceptsTab="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        
        <Button  Grid.Row ="7" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="4" Content="رد دخواست" Name="SaveButton" Click="SaveForm" Tag="Footer"/>
    </Grid>
</Local:PopupWindow>
