<Local:RequestFormBase x:Class="CRM.Application.Views.InquiryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
        Title="استعلام" Height="800" Width="800">
    <DockPanel FlowDirection="RightToLeft">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="15"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="15"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="بسمه تعالی" HorizontalAlignment="Center" />

            <StackPanel Grid.Row="1" Grid.Column="0"  Orientation="Horizontal" HorizontalAlignment="Right">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="تاریخ :" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="InquiryResponseDateTextBlock" Style="{StaticResource ResourceKey=NumericTextBlock}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="شماره  :" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="InquiryResponseNoTextBlock" />

                </Grid>
            </StackPanel>

            <TextBlock Grid.Row="4" Text="استعلام تغییر نام تلفن" />

            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <TextBlock Text="مرکز تلفن  " />
                <TextBlock Name="CenterNameTextBlock1" />
            </StackPanel>

            <TextBlock Grid.Row="8" Text="با سلام" />

            <WrapPanel Grid.Row="10" Orientation="Horizontal">
                <TextBlock Text="با توجه به این که آقای / خانم / شرکت / اداره " />
                <TextBlock Name="FirstNameOrTitleTextBlock" FontWeight="Bold" />
                <TextBlock Name="LastNameTextBlock" FontWeight="Bold" />
            </WrapPanel>

            <WrapPanel Grid.Row="11" Orientation="Horizontal">
                <TextBlock Text="درصدد انتقال امتیاز مشترک تلفن شماره  " />
                <TextBlock Name="TelephoneNoTextBlock" FontWeight="Bold" Style="{StaticResource ResourceKey=NumericTextBlock}" />
                <TextBlock Text=" به نام " />
                <TextBlock Name="FirstNameOrTitleTextBlock2" FontWeight="Bold" />
                <TextBlock Name="LastNameTextBlock2" FontWeight="Bold"/>
            </WrapPanel>

            <WrapPanel Grid.Row="12" Orientation="Horizontal">
                <TextBlock Text="می باشد و صورت حساب تلفن فوق را تا تاریخ " />
                <TextBlock Name="LastBillDate" Style="{StaticResource ResourceKey=NumericTextBlock}" />
                <TextBlock Text=" پرداخت نموده و به تایید و رویت این دفتر رسیده."/>
            </WrapPanel>
            <WrapPanel Grid.Row="13" Orientation="Horizontal">
                <TextBlock Text="لذا خواهشمند است ضمن تایید ، بلامانع بودن معامله را اعلام فرمایید." />
            </WrapPanel>

            <StackPanel Grid.Row="15" Orientation="Horizontal" >
                <TextBlock Text="دفتر خدماتی شماره " />
                <TextBlock Name="OfficeCodeTextBlock" Width="150" Style="{StaticResource ResourceKey=NumericTextBlock}" />
                <TextBlock Text="از دفاتر خدماتی مرکز " />
                <TextBlock Name="CenterNameTextBlock" Width="150" />
            </StackPanel>


            <Grid Grid.Row="17">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="آخرین کنتور : " Visibility="Collapsed"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="CounterNoTextBox" Style="{StaticResource ResourceKey=NumericTextBox}"  Visibility="Collapsed"/>
                <Label Grid.Row="0" Grid.Column="2" Content="بدهی : " Visibility="Collapsed"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="DebtTextBox" Style="{StaticResource ResourceKey=NumericTextBox}" Visibility="Collapsed"/>
                <Label Grid.Row="1" Grid.Column="0" Content="توضیحات : " />
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Name="CommentTextBox" Height="60" Width="auto" MinLines="2" />
            </Grid>
        </Grid>
    </DockPanel>
</Local:RequestFormBase>    