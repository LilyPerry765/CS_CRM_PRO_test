<Local:RequestFormBase x:Class="CRM.Application.Views.ADSLPAPForm"
                       xmlns:Local="clr-namespace:CRM.Application.Local" 
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:converter="clr-namespace:CRM.Converters" 
                       xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                       WindowStartupLocation="CenterScreen" 
                       Title="ADSL شرکت های PAP" Height="Auto" Width="800">
    
    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <DockPanel FlowDirection="RightToLeft">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="مشخصات محل نصب">
                    <Grid Name="ADSLTelephoneInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام شرکت PAP : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="PAPInfoNameTextBox"  IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="0" Content="شماره تلفن : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Name="TelephoneNoTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="نام مشترک : " />
                        <TextBox Grid.Row="2" Grid.Column="1" Name="CustomerTextBox" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="2" Content="وضعیت مشترک : " />
                        <TextBox Grid.Row="2" Grid.Column="3" Name="CustomerStatusTextBox" IsReadOnly="True" />

                        <Label Grid.Row="3" Grid.Column="0" Content="نام مرکز : " />
                        <TextBox Grid.Row="3" Grid.Column="1" Name="CenterTextBox" IsReadOnly="True" />

                        <Label Grid.Row="3" Grid.Column="2" Content="کد پستی : " />
                        <TextBox Grid.Row="3" Grid.Column="3" Name="PostalCodeTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="4" Grid.Column="0" Content="آدرس : " />
                        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Name="AddressTextBox" IsReadOnly="True" />

                        <Label Grid.Row="5" Grid.Column="0" Content="تاریخ درخواست : " />
                        <TextBox Grid.Row="5" Grid.Column="1" Name="RequestDateTextBox" IsReadOnly="True" FontFamily="pack://application:,,,/CRM.Application;Component/Resources/Fonts/#Yekan" />

                        <Label Grid.Row="5" Grid.Column="2" Content="مهلت دایری : " />
                        <TextBox Grid.Row="5" Grid.Column="3" Name="InstalDateTextBox" IsReadOnly="True" FontFamily="pack://application:,,,/CRM.Application;Component/Resources/Fonts/#Yekan" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="مشخصات بوخت ADSL">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="بوخت اسپلیتر : " />
                        <TextBox Grid.Row="0" Grid.Column="1" FlowDirection="LeftToRight" HorizontalAlignment="Left"  Name="SplitorBuchtTextBox" IsReadOnly="True" FontFamily="pack://application:,,,/CRM.Application;Component/Resources/Fonts/#Yekan"  />

                        <Label Grid.Row="0" Grid.Column="2" Content="بوخت لاین : " />
                        <TextBox Grid.Row="0" Grid.Column="3" FlowDirection="LeftToRight" HorizontalAlignment="Left" Name="LineBuchtTextBox" IsReadOnly="True" FontFamily="pack://application:,,,/CRM.Application;Component/Resources/Fonts/#Yekan" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Name="ResultGroupBox" Header="نتایج بررسی" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="15" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1" Style="{StaticResource ResourceKey=SuccessLabel}" Visibility="Collapsed" Name="NoProblemLabel" />
                        <Label Grid.Row="2" Style="{StaticResource ResourceKey=ErrorLabel}" Visibility="Collapsed" Name="PAPInfoLabel" />
                        <Label Grid.Row="3" Style="{StaticResource ResourceKey=ErrorLabel}" Visibility="Collapsed" Name="TelephoneNoLabel" />
                        <Label Grid.Row="4" Style="{StaticResource ResourceKey=ErrorLabel}" Visibility="Collapsed" Name="CenterLabel" />
                        <Label Grid.Row="5" Style="{StaticResource ResourceKey=ErrorLabel}" Visibility="Collapsed"  Name="InstalDateLabel" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Name="CommentsGroupBox" Header="نظرات">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="امور مشترکین : " Name="CommentCustomersLabel" />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="CommentCustomersTextBox" Height="40" />

                        <Label Grid.Row="1" Grid.Column="0" Content="MDF : " Name="MDFCommentLabel"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="MDFCommentTextBox" IsReadOnly="True" Height="40" />

                        <Label Grid.Row="2" Grid.Column="0" Content="ناظر امور مشترکین : " Name="FinalCommentLabel" />
                        <TextBox Grid.Row="2" Grid.Column="1" Name="FinalCommentTextBox" Height="40" />
                        
                        <Label Grid.Row="3" Grid.Column="0" Content="علت رد درخواست :" Name="CommentRejectLabel"/>
                        <ListBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" x:Name="CommentRejectListBox" SelectedValue="{Binding Path=CommnetReject}" SelectedValuePath="Tag" >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Background="Transparent" Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBoxItem Tag="2">شماره تلفن ثبت شده در سیستم موجود نمی باشد</ListBoxItem>
                            <ListBoxItem Tag="3">رانژه شرکت دیگری می باشد</ListBoxItem>
                        </ListBox>
                    </Grid>
                </GroupBox>

            </Grid>
        </DockPanel>
    </ScrollViewer>

</Local:RequestFormBase>