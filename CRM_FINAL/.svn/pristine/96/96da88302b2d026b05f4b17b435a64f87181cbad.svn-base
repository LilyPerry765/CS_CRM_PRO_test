<UserControl x:Class="CRM.Application.UserControls.CityCenterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls" 
             mc:Ignorable="d"
             Loaded="UserControl_Loaded">
    <Grid FlowDirection="RightToLeft" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!--<RowDefinition Height="32" />-->
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Label Content="شهر:" x:Name="CityTextBlock"     />
        <UserControls:CheckableComboBox  x:Name="CityComboBox" Grid.Column="2"    />

        <Label Content="مرکز:" Grid.Row="2" x:Name="CenterTextBlock"/>
        <UserControls:CheckableComboBox x:Name="CenterComboBox" Grid.Row="2" Grid.Column="2" />

    </Grid>
</UserControl>
