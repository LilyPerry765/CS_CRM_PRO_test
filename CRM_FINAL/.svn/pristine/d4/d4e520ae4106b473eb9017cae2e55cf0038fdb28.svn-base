<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.GenrealCostReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"          
             xmlns:Local="clr-namespace:CRM.Application.Local" 
             mc:Ignorable="d">
    <StackPanel FlowDirection="RightToLeft" TextBoxBase.TextChanged="FiltersTextBox_TextChanged">

        <GroupBox Header="انتخاب شهر و مرکز">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="شهر : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox x:Name="CityComboBox"  Grid.Row="0" Grid.Column="1" LostFocus="CityComboBox_LostFocus"/>

                <Label Grid.Row="0" Grid.Column="3" Content="مرکز : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox  x:Name="CenterComboBox" Grid.Row="0" Grid.Column="4"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="انتخاب تاریخ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0"  Content="از تاریخ :"/>
                <cal:DatePicker x:Name="FromDatePicker" Grid.Row="0" Grid.Column="1"/>

                <Label  Grid.Row="0" Grid.Column="3"  Content="تا تاریخ :"/>
                <cal:DatePicker x:Name="ToDatePicker"  Grid.Row="0" Grid.Column="4"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="انتخاب شماره تلفن">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="از شماره :" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="FromTelephoneNoTextBox"  Grid.Row="0" Grid.Column="1"/>

                <Label Content="تا شماره :" Grid.Row="0" Grid.Column="3"/>
                <TextBox x:Name="ToTelephoneNoTextBox" Grid.Row="0" Grid.Column="4"/>

            </Grid>
        </GroupBox>

        <GroupBox Header="انتخاب سایر موارد">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="از مبلغ :"  Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="FromCostAmountTextBox" Grid.Row="0" Grid.Column="1"/>

                <Label Content="تا مبلغ :"  Grid.Row="0" Grid.Column="3"/>
                <TextBox Name="ToCostAmountTextBox"  Grid.Row="0" Grid.Column="4"/>

                <Label Content="نوع هزینه :"  Grid.Row="2" Grid.Column="0"/>
                <UserControls:CheckableComboBox x:Name="CostTypeComboBox" Grid.Row="2" Grid.Column="1"/>

            </Grid>
        </GroupBox>
    </StackPanel>
</Local:ReportBase>
