<UserControl x:Class="CRM.Application.UserControls.CheckableComboBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:CRM.Application.Codes">
    <ComboBox x:Name="ItemsComboBox" Height="25" SelectedValuePath="ID" 
              SelectionChanged="ItemsComboBox_SelectionChanged" 
              PreviewKeyDown="CheckableItemsComboBox_PreviewKeyDown" 
              LostFocus="ItemsComboBox_LostFocus" 
              IsEditable="False">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <Grid VerticalAlignment="Center" Height="25">
                    <Grid.Resources>
                        <Style TargetType="{x:Type CheckBox}">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsChecked}" Grid.Column="0" VerticalAlignment="Center" 
                              custom:CustomFocusManager.IsFocused="{Binding Path=IsHighlighted,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ComboBoxItem}}"/>
                    <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Description}" Grid.Column="2" VerticalAlignment="Center" />
                </Grid>

            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>