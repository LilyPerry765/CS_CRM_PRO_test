<Local:RequestFormBase  xmlns:Local="clr-namespace:CRM.Application.Local" 
                   x:Class="CRM.Application.Views.ConfirmChangeLocationCenterToCenterForm"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uc="clr-namespace:CRM.Application.UserControls"
                    xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                    mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DesignWidth="780"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    Loaded="PopupWindow_Loaded"  Title="تایید تغییر مکان مرکز به مرکز">
    <DockPanel FlowDirection="RightToLeft">
        <Grid FlowDirection="RightToLeft">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <uc:CustomerInfoSummary x:Name="CustomerInfoSummaryUserControl" Grid.Row="0" Grid.Column="0"/>
        
        <GroupBox Header="مشخصات تلفن" Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                <Label Content="تلفن قدیم" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="OldTelTextBox" IsReadOnly="True" Grid.Row="0" Grid.Column="1"/>

                 <Label Content="تلفن جدید" Grid.Row="0" Grid.Column="2"/>
                 <TextBox x:Name="NewTelTextBox" IsReadOnly="True" Grid.Row="0" Grid.Column="3"/>

                    <Label Content="مرکز مبدا" Grid.Row="1" Grid.Column="0"/>
                 <ComboBox x:Name="FromCenter" IsEnabled="False" Grid.Row="1" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="ID"/>

                    <Label Content="مرکز مقصد" Grid.Row="1" Grid.Column="2"/>
                    <ComboBox x:Name="ToCenter" IsEnabled="False" Grid.Row="1" Grid.Column="3" DisplayMemberPath="Name" SelectedValuePath="ID"/>
                </Grid>
        </GroupBox>
            
</Grid>
    </DockPanel>
</Local:RequestFormBase>
