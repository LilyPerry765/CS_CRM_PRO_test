<Local:PopupWindow 
        x:Class="CRM.Application.Views.RequestStatusViewForm"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="مشاهده وضعیت روال" Loaded="PopupWindow_Loaded" >
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <Border BorderBrush="#FFE2E2E2" BorderThickness="1"  Background="Transparent">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="30"/>
        </Border.Effect>
            <Grid>
                <StackPanel  x:Name="StackPanelItem" Orientation="Horizontal" />
        </Grid>
    </Border>
    </ScrollViewer>

</Local:PopupWindow>
