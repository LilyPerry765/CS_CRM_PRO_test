<Window x:Class="Tutorial.Forms.TestStyles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestStyles" Height="568" Width="503">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries >
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Height="510" Width="455">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="242*" />
            <ColumnDefinition Width="213*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*" />
            <RowDefinition Height="42*" />
            <RowDefinition Height="146*" />
            <RowDefinition Height="259*" />
        </Grid.RowDefinitions>
        <Button Background="{StaticResource BlueButtonBackground}" Content="Click Me" Margin="0,0,140,21" />
        <Button Style="{StaticResource BlueBackgroundStyle}" Content="Click Styled Button" Grid.Row="1" Margin="45,0,0,0" Grid.Column="1" />
        
        <Button Style="{StaticResource BlueButtonTemplateStyle}" Grid.Row="2" Margin="0,0,101,43">Templated Button</Button>
        <GroupBox Header="GroupBox1" Height="176" HorizontalAlignment="Left" Margin="22,14,0,0" Name="GroupBox1" 
            VerticalAlignment="Top" Width="200" Template="{StaticResource TintedGroupBox}" Grid.Row="3">
            
 
        </GroupBox>
        <GroupBox Header="test" Style="{StaticResource TintedGroupBoxStyle}" Grid.Row="3" Grid.Column="1" Margin="45,19,62,64" Name="test"></GroupBox>

    </Grid>
</Window>
