<Local:RequestFormBase x:Class="CRM.Application.Views.ChangeNameForm"
                   xmlns:Local="clr-namespace:CRM.Application.Local" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   WindowStartupLocation="CenterScreen" 
                   Title="تغییر نام" Height="Auto" Width="800" Loaded="RequestFormBase_Loaded">

    <DockPanel FlowDirection="RightToLeft">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="مشخصات تلفن">
                <Grid Name="TelephoneInfo">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="شماره تلفن : " />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TelephoneNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                    
                    <Label Grid.Row="0" Grid.Column="2" Content="کد پستی : " />
                    <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding PostalCode}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="آدرس : "/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Address}" IsReadOnly="True" />
                    
                </Grid>
            </GroupBox>
            
            <GroupBox Grid.Row="1" Header="مشخصات فروشنده">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="کدملی / شماره ثبت : " />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="OldNationalCodeTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                    
                    <Label Grid.Row="0" Grid.Column="2" Content="نام فروشنده : " />
                    <TextBox Grid.Row="0" Grid.Column="3" Name="OldCustomerNameTextBox" IsReadOnly="True" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="مشخصات خریدار">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="کدملی / شماره ثبت : " />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="NewNationalCodeNoTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                    
                    <Label Grid.Row="0" Grid.Column="2" Content="نام خریدار : " />
                    <TextBox Grid.Row="0" Grid.Column="3" Name="NewCustomerNameTextBox" IsReadOnly="True" />
                </Grid>
            </GroupBox>
            
            <GroupBox Grid.Row="3" Header="مشخصات درخواست" Name="RequestInfo" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="شماره درخواست : " />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ID}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                    <Label Grid.Row="0" Grid.Column="2" Content="نام مرکز : " />
                    <TextBox Grid.Row="0" Grid.Column="3" Name="CenterNameTextBox" IsReadOnly="True"/>

                    <Label Grid.Row="0" Grid.Column="4" Content="نام درخواست کننده : " />
                    <TextBox Grid.Row="0" Grid.Column="5" Text="{Binding RequesterName}" IsReadOnly="True" />

                    <Label Grid.Row="1" Grid.Column="0" Content="تاریخ درخواست : " />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="RequestDateTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"  />

                    <Label Grid.Row="1" Grid.Column="2" Content="شماره نامه درخواست : " />
                    <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding RequestLetterNo}" IsReadOnly="True"/>

                    <Label Grid.Row="1" Grid.Column="4" Content="تاریخ نامه درخواست : " />
                    <TextBox Grid.Row="1" Grid.Column="5" Name="RequestLetterDateTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="4" Header="مشخصات دادگاه" Name="CourtInfo" Visibility="Collapsed" Height="50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="نام دادگاه : " />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CourtName}" IsReadOnly="True" />
                    
                    <Label Grid.Row="0" Grid.Column="2" Content="شماره نامه دادگاه : " />
                    <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding CourtVerdictNo}" IsReadOnly="True" />
                    
                    <Label Grid.Row="0" Grid.Column="4" Content="تاریخ نامه دادگاه : " />
                    <TextBox Grid.Row="0" Grid.Column="5" Name="CourtVerdictDateTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="5" Header="نتیجه استعلام" Name="InquiryInfo" Visibility="Collapsed" >
                <StackPanel Orientation="Vertical">
                    <Grid Name="InquirytimeOutGrid" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="4" Content="نیاز به استعلام مجدد دارد !" FontWeight="Bold" Foreground="Red"/>
                        <Button Grid.Row="0" Grid.Column="5" Name="InquiryButton" Content="استعلام مجدد" Click="InquiryButton_Clicked" />
                    </Grid>
                    <Grid Name="InquiryGrid" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="180" />                            
                            
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="آخرین کنتور : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CounterNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="0" Grid.Column="2" Content="بدهی : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Debt}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="0" Grid.Column="4" Name="StatusLabel" HorizontalAlignment="Left"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Content="توضیحات : "/>
                        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Text="{Binding Commnet}" IsReadOnly="True"/>
                        
                    </Grid>
                    
                </StackPanel>
                
            </GroupBox>
            <Button x:Name="PrintCertificate" Grid.Row="6" Content="سند تغییر نام"  Click="PrintCertificate_Click" Margin="5"/>
            <Button x:Name="ScanButton" Grid.Row="7" Content="دریافت اسکن مدرک"  Click="ScanButton_Click" Margin="0,5,5,3" Height="Auto"/>
        </Grid>
        
    </DockPanel>
    
</Local:RequestFormBase>
