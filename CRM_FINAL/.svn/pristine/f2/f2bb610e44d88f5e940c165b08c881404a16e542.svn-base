<Window x:Class="CRM.Application.Reports.Viewer.SaveReportForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="Tahoma" FlowDirection="RightToLeft" UseLayoutRounding="True"
        VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        AllowsTransparency="False" SizeToContent="WidthAndHeight">
    <Grid DataContext="{Binding CurrentReport}" FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Label Content="نام گزارش : " VerticalAlignment="Center" />
        <TextBox Text="{Binding Title}" Name="NameTextBox" Grid.Column="1" />

        <Label Content="نام گروه : " Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="CategoryName" Text="{Binding Category}"/>
        
        <WrapPanel Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="ذخیره" Padding="15 5 15 5" Click="SaveReport" />
            <Button Content="انصراف" Padding="15 5 15 5" Click="Cancel" />
        </WrapPanel>
    </Grid>
</Window>
