<Window x:Class="Test.CRM.ServiceHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="LoadButton" Height="23" Width="80" Margin="10" Click="LoadButton_Click" HorizontalAlignment="Right"/>

        <Grid HorizontalAlignment="Left" TextElement.FontFamily="Yekan" FlowDirection="RightToLeft" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="از تاریخ : "/>
            <cal:DatePicker x:Name="FromDatePicker" Grid.Column="1"/>

            <Label Grid.Column="2" Content="تا تاریخ : "/>
            <cal:DatePicker Grid.Column="3" x:Name="ToDatePicker"/>
        </Grid>

        <DataGrid x:Name="ItemsDataGrid" Grid.Row="1" AutoGenerateColumns="True"/>

    </Grid>
</Window>

