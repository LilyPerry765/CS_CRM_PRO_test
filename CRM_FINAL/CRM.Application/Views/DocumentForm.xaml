<Local:PopupWindow  xmlns:Local="clr-namespace:CRM.Application.Local" 
                    x:Class="CRM.Application.Views.DocumentForm"                    
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:uc="clr-namespace:CRM.Application.UserControls" 
                    Title="ثبت مدارک پایه" 
                    Loaded="PopupWindow_Loaded" Icon="/CRM.Application;component/Images/BaseFile48x48 (2).png"
                    Width="800" >


    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Name="textBlock02" Content="عنوان : " />
        <ComboBox Grid.Row="0" Grid.Column="1" Name="DocumentTypeIDcomboBox" SelectedValuePath="ID" DisplayMemberPath="DocumentName" SelectedValue="{Binding DocumentTypeID}" />

        <Label Grid.Row="0" Grid.Column="2" Name="textBlock01" Content="نوع درخواست : " />
        <ComboBox  Grid.Row="0" Grid.Column="3" Name="RequestTypeIDcomboBox" SelectedValuePath="ID" DisplayMemberPath="Title" SelectedValue="{Binding RequestTypeID}" SelectionChanged="RequestTypeIDcomboBox_SelectionChanged" />


        <Label Content="مورد نیاز : " Grid.Row="1" Grid.Column="0"/>
        <ListBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" SelectedValue="{Binding Path=NeedForCustomerType}" SelectedValuePath="Tag">
            <ListBoxItem Tag="0">مشترک حقیقی</ListBoxItem>
            <ListBoxItem Tag="1">مشترک حقوقی</ListBoxItem>
            <ListBoxItem Tag="2">هر دو</ListBoxItem>
        </ListBox>

        <Label Grid.Row="3" Name="textBlock16" Content="گروه محاسباتی : " />
        <ComboBox Grid.Row="3" Grid.Column="1" Name="ChargingTypecomboBox" DisplayMemberPath="Key" SelectedValuePath="Value" SelectedValue="{Binding ChargingType}" ></ComboBox>
        
        <Label Name="textBlock17" Content="نوع تلفن : " Grid.Column="2"  Grid.Row="3" />
        <ComboBox Grid.Row="3" Grid.Column="3" Name="TelephoneTypecomboBox" DisplayMemberPath="Key" SelectedValuePath="Value" SelectedValue="{Binding TelephoneType}" />

        <Label Name="textBlock19" Content="نوع مالکیت : " Grid.Row="4"  />
        <ComboBox DisplayMemberPath="Key" SelectedValue="{Binding TelephonePosessionType}" SelectedValuePath="Value" Name="PosessionTypecomboBox" Grid.Row="4" Grid.Column="1" />
        
        <Label Name="textBlock20" Content="اولویت واگذاری : " Grid.Row="4" Grid.Column="2" Grid.RowSpan="2" />
        <ComboBox DisplayMemberPath="Key" SelectedValue="{Binding OrderType}" SelectedValuePath="Value" Name="OrderTypecomboBox" Grid.Row="4" Grid.Column="3"   />

        <Button Grid.Row ="5" Grid.Column="0" Content="ذخیره" Name="SaveButton" Click="SaveForm" Tag="Footer"/>

    </Grid>


</Local:PopupWindow>