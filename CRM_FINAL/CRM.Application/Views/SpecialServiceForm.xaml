<Local:RequestFormBase x:Class="CRM.Application.Views.SpecialServiceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
        xmlns:Local="clr-namespace:CRM.Application.Local"
        Title="درخواست سرویس های ویژه" Height="300" Width="800" 
        Icon="/CRM.Application;component/Images/service_48x48.png">
    
    <DockPanel FlowDirection="RightToLeft" Margin="10,10,10,10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="شماره تلفن :  " FontSize="13" FontWeight="Bold"/>
            <Label Grid.Row="0" Grid.Column="1" Name="TeleNoLabel" FontSize="13" FontWeight="Bold"/>

            <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="سرویس های ایجاد شده" Margin="0,0,0,10">
                <ListView Name="SpecialServiceListViewAdd" ItemsSource="{Binding}">
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Path=Title}"  />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="سرویس های حذف شده" Margin="0,0,0,10">
                <ListView Name="SpecialServiceListViewDel" ItemsSource="{Binding}">
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Path=Title}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

        </Grid>
    </DockPanel>
</Local:RequestFormBase>
