<Local:PopupWindow   
        x:Class="CRM.Application.Views.MapItemForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <StackPanel>
        <GroupBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Content="شهر"  x:Name="CityRadioButton"    Grid.Row="0"  Checked="CityRadioButton_Checked"/>
                    <RadioButton Content="مرکز" x:Name="CenterRadioButton"  Grid.Row="1"  Checked="CenterRadioButton_Checked"/>
                    <RadioButton Content="کافو" x:Name="CabinetRadioButton" Grid.Row="2"  Checked="CabinetRadioButton_Checked"/>
                    <RadioButton Content="پست"  x:Name="PostRadioButton"    Grid.Row="3"  Checked="PostRadioButton_Checked"/>
            </Grid>
        </GroupBox>

        <GroupBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label    Grid.Row="0"  Grid.Column="0"   x:Name="CityLabel" Content="شهر : " Height="30"/>
                    <ComboBox Grid.Row="0"  Grid.Column="1"  x:Name="CityComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="CityComboBox_SelectionChanged" Height="30"/>

                    <Label    Grid.Row="1"  Grid.Column="0"  x:Name="CenterLabel" Content="مرکز : " Height="30"/>
                    <ComboBox Grid.Row="1"  Grid.Column="1"   x:Name="CenterComboBox" DisplayMemberPath="CenterName" SelectedValuePath="ID"  SelectionChanged="CenterComboBox_SelectionChanged" Height="30"/>

                    <Label    Grid.Row="2"  Grid.Column="0"   x:Name="CabinetLabel" Content="کافو : " Height="30"/>
                    <ComboBox Grid.Row="2"  Grid.Column="1"   x:Name="CabinetComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="CabinetComboBox_SelectionChanged" Height="30"/>

                    <Label    Grid.Row="3"  Grid.Column="0"   x:Name="PostLabel" Content="پست : " Height="30"/>
                    <ComboBox Grid.Row="3"  Grid.Column="1"   x:Name="PostComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="PostComboBox_SelectionChanged" Height="30"/>

                </Grid>
        </GroupBox>


            <Button x:Name="Save" Content="ذخیره"  Width="110" Height="25" Tag="Footer" Click="SaveButton" Grid.Row="6" />
        </StackPanel>
    </ScrollViewer>
</Local:PopupWindow>
