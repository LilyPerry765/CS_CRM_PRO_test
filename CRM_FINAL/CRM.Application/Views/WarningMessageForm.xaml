<Local:PopupWindow x:Class="CRM.Application.Views.WarningMessageForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Local="clr-namespace:CRM.Application.Local" 
        Icon="pack://application:,,,/CRM.Application;component/Images/Warning_32x32.png"
        Height="300" MinWidth="500" Loaded="PopupWindow_Loaded">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="نوع اخطار: " Grid.Row="0" Grid.Column="0"/>
        <ComboBox x:Name="WarningTypeComboBox" Grid.Row="0" Grid.Column="1" SelectionChanged="WarningTypeComboBox_SelectionChanged"
                  DisplayMemberPath="Name" SelectedValue="{Binding WarningType}" SelectedValuePath="ID"/>
        
        <Label Content="متن پیام اخطار: " Grid.Row="1" Grid.Column="0" VerticalAlignment="Top"/>
        <TextBox x:Name="WarningMessageTextBox" Grid.Row="1" Grid.Column="1" Margin="3.5" Text="{Binding Message}" MinHeight="250"
                 AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" BorderBrush="DimGray" BorderThickness="1"/>
        
        <Button x:Name="SaveButton" Content="ذخیره" Tag="Footer" Height="23" Width="80" Click="SaveForm"/>
        
    </Grid>
</Local:PopupWindow>
