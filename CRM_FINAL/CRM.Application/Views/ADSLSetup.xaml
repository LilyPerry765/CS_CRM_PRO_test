<Local:RequestFormBase x:Class="CRM.Application.Views.ADSLSetup"
        xmlns:Local="clr-namespace:CRM.Application.Local" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   WindowStartupLocation="CenterScreen" 
                   Title="نصب و راه اندازی ADSL" Height="Auto" Width="800">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <DockPanel FlowDirection="RightToLeft">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <GroupBox Header="مشخصات تلفن" Grid.Row="0" Name="TelephoneInfo">
                </GroupBox>

                <GroupBox Grid.Row="1" Name="MDFUserGroupBox" Header="مشخصات کاربر ارسال کننده">
                    <Grid Name="MDFUserInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام کاربر ارسال کننده : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Name="MDFUserTextBox" />

                        <Label Grid.Row="0" Grid.Column="2" Content="زمان ارسال : " />
                        <TextBox Grid.Row="0" Grid.Column="3"  IsReadOnly="True" Name="MDFDateTextBox" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Name="TechnicalInfoGroupBox" Header="مشخصات سرویس ADSL">
                    <Grid Name="ServiceInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام سرویس : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding Title}" Grid.ColumnSpan="3" />

                        <Label Grid.Row="1" Grid.Column="0" Content="نوع سرویس : " />
                        <TextBox Grid.Row="1" Grid.Column="1"  IsReadOnly="True" Text="{Binding ServiceType}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="گروه سرویس : " />
                        <TextBox Grid.Row="1" Grid.Column="3"  IsReadOnly="True" Text="{Binding ServiceGroup}" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="پهنای باند : " />
                        <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding BandWidth}" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="2" Grid.Column="2" Content="حجم : " />
                        <TextBox Grid.Row="2" Grid.Column="3" IsReadOnly="True" Text="{Binding Traffic}" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="مدت استفاده : " />
                        <TextBox Grid.Row="3" Grid.Column="1" IsReadOnly="True" Text="{Binding Duration}" Style="{StaticResource ResourceKey=NumericTextBox}"/>

                        <Label Grid.Row="3" Grid.Column="2" Content="هزینه : " />
                        <TextBox Grid.Row="3" Grid.Column="3" IsReadOnly="True" Text="{Binding Price}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="4" Grid.Column="0" Content="شماره نامه مجوز : " Name="LicenceLetterNoLabel" Visibility="Collapsed" />
                        <TextBox Grid.Row="4" Grid.Column="1" Name="LicenceLetterNoTextBox" Visibility="Collapsed" />

                        <Label Grid.Row="5" Grid.Column="0" Content="اولویت مشترک : " />
                        <TextBox Grid.Row="5" Grid.Column="1" Name="CustomerPriorityTextBox" IsReadOnly="True" />                       
                        
                        <Label Grid.Row="5" Grid.Column="2" Content="نحوه پرداخت هزینه سرویس : " />
                        <TextBox Grid.Row="5" Grid.Column="3" Name="ServiceCostTextBox" IsReadOnly="True"  />

                        <Label Grid.Row="6" Grid.Column="0" Content="نصب و راه اندازی توسط مخابرات : " />
                        <CheckBox Grid.Row="6" Grid.Column="1" Name="RequiredInstalationCheckBox" VerticalAlignment="Center" IsEnabled="False" />
                        
                        <Label Grid.Row="6" Grid.Column="2" Content="درخواست مودم : " />
                        <CheckBox Grid.Row="6" Grid.Column="3" Name="NeedModemCheckBox" VerticalAlignment="Center" IsEnabled="False"  />

                        <Label Grid.Row="7" Grid.Column="0" Content="نوع مودم : " />
                        <TextBox Grid.Row="7" Grid.Column="1" Name="ModemTypeTextBox" IsReadOnly="True" />

                        <Label Grid.Row="7" Grid.Column="2" Content="شماره سریال مودم : " />
                        <TextBox Grid.Row="7" Grid.Column="3" Name="ModemSerialNoTextBox" IsReadOnly="True" />

                        <Label Grid.Row="8" Grid.Column="0" Content="IP تکی : " />
                        <TextBox Grid.Row="8" Grid.Column="1" Name="IPTextBox" IsReadOnly="True" />

                        <Label Grid.Row="8" Grid.Column="2" Content="IP گروهی : " />
                        <TextBox Grid.Row="8" Grid.Column="3" Name="IPGroupTextBox" IsReadOnly="True" />

                        <Label Grid.Row="9" Grid.Column="0" Content="پورت : " />
                        <TextBox Grid.Row="9" Grid.Column="1" Name="PortTextBox" IsReadOnly="True" />
                        
                        <Label Grid.Row="10" Grid.Column="0" Content="نام کاربری : " />
                        <TextBox Grid.Row="10" Grid.Column="1" Name="UserNameTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="10" Grid.Column="2" Content="رمز عبور : " />
                        <TextBox Grid.Row="10" Grid.Column="3" Name="PasswordTextBox" IsReadOnly="True" />

                    </Grid>
                </GroupBox>

                <!--<GroupBox Grid.Row="4" Header="مشخصات پیمانکاران">

                    <Grid Name="ContractorInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="پیمانکاران : " />
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="ContractorComboBox" DisplayMemberPath="Title" SelectedValuePath="ID" SelectedValue="{Binding ID}" SelectionChanged="ContractorTitleComboBox_SelectionChanged"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="نام مدیر : " />
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding HeaderName}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="تلفن : " />
                        <TextBox Grid.Row="1" Grid.Column="3" IsReadOnly="True" Text="{Binding Telephone}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="2" Grid.Column="0" Content="فکس : " />
                        <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding Fax}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="2" Grid.Column="2" Content="موبایل : " />
                        <TextBox Grid.Row="2" Grid.Column="3" IsReadOnly="True" Text="{Binding Mobile}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="3" Grid.Column="0" Content="آدرس : " />
                        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" IsReadOnly="True" Text="{Binding Address}" />

                    </Grid>
                </GroupBox>-->

                <GroupBox Grid.Row="5" Header="تکمیل دایری" Name="CustomerSatisfactionGroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0" Name="SavedValueImage" Source="/CRM.Application;component/Images/add_16x16.png" Width="16" Height="16" HorizontalAlignment="Left" />
                        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Name="SavedValueLabel" Content="     افزودن اطلاعات تماس" Style="{StaticResource ResourceKey=HyperLink}"  Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" MouseLeftButtonDown="SavedValueLabel_MouseLeftButtonDown" Margin="0,0,10,0"/>

                        <DataGrid DockPanel.Dock="Bottom" x:Name="ItemsDataGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                      BorderThickness="0 1 0 0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserResizeColumns="True"
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      ItemsSource="{Binding}"                                
                                      IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header=" تاریخ " Width="5*" Binding="{Binding Path=Date, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PersianDateConverter}}" />
                                <DataGridTextColumn Header=" ساعت " Width="5*" Binding="{Binding Path=Time, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header=" توضیحات " Width="5*" Binding="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged}"  />
                            </DataGrid.Columns>
                        </DataGrid>

                        <Label Grid.Row="3" Grid.Column="0" Content="شماره سریال مودم : " Name="ModemSerialNoLabel" />
                        <ComboBox Grid.Row="3" Grid.Column="1" Name="ModemSerilaNoComboBox" SelectedValuePath="ID" DisplayMemberPath="Title" Style="{StaticResource ResourceKey=NumericComboBox}" />

                        <Label Grid.Row="3" Grid.Column="2" Content="آدرس فیزیکی مودم : " Name="ModemMACAddressLabel" />
                        <TextBox Grid.Row="3" Grid.Column="3" Name="ModemMACAddressTextBox" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <!--<Label Grid.Row="4" Grid.Column="0" Content="توضیحات پشتیبان : " />
                        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Name="SetupCommentTextBox" Height="60"/>-->

                        <!--<Label Grid.Row="1" Grid.Column="2" Content="تاریخ دایری : " />
                        <TextBox Grid.Row="1" Grid.Column="3" IsReadOnly="True" Name="InstallDate" FontFamily="pack://application:,,,/CRM.Application;Component/Resources/Fonts/#Yekan" />-->
                    </Grid>
                </GroupBox>

            </Grid>
        </DockPanel>
    </ScrollViewer>

</Local:RequestFormBase>