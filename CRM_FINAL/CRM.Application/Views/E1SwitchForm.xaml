<Local:RequestFormBase          
                   x:Class="CRM.Application.Views.E1SwitchForm"
                   xmlns:Local="clr-namespace:CRM.Application.Local"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                   Title="سالن سوئیچ" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:uc="clr-namespace:CRM.Application.UserControls" 
                   WindowStartupLocation="CenterScreen" Loaded="RequestFormBase_Loaded">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/CRM.Application;Component/Resources/Styles/AutoComplete.Styles.xaml" />
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <uc:RequestInfoSummary Grid.Row="0" x:Name="RequestInfoUC"/>
            <uc:CustomerInfoSummary Grid.Row="1" x:Name="CustomerInfoUC"/>
            
            <uc:E1InfoSummary Grid.Row =" 2" x:Name="E1InfoSummaryUC"/>

            <GroupBox Grid.Row="3" Header="پورت دی دی اف"       x:Name="DDFGroupBox">
            </GroupBox>

            <GroupBox Grid.Row="4" Header="پورت دی دی اف رابط" x:Name="InterfaceDDFGroupBox">
            </GroupBox>

            <GroupBox Grid.Row="5" Header="جزئیات تعیین شماره" x:Name="DetailGroupBox">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label     Grid.Row="1" Grid.Column="0"  Content="وضعیت"  Name="StatusLabel"/>
                    <ComboBox  Grid.Row="1" Grid.Column="1"  Name="StatusComboBox" DisplayMemberPath="StatusResult" SelectedValuePath="StepStatusID"   />
                </Grid>


            </GroupBox>




        </Grid>
    </ScrollViewer>
</Local:RequestFormBase>