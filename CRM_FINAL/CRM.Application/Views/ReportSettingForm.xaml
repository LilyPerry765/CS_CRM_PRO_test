<Local:PopupWindow 
        x:Class="CRM.Application.Views.ReportSettingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        Title="تنظیمات" Loaded="PopupWindow_Loaded" ContentRendered="PopupWindow_ContentRendered">
    <ScrollViewer  FlowDirection="RightToLeft">
        <StackPanel >
            
            <GroupBox Header="عنوان گزارش" Margin="5" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Row="0" Grid.Column="0" Content="عنوان : " VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="TitleTextBox" SelectionChanged="TitleTextBox_SelectionChanged" Grid.ColumnSpan="3"/>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="گروه بندی" Margin="5">
                <ListBox x:Name="ColumnList" Style="{x:Null}"  MaxHeight="200" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding IsSelected, Mode=TwoWay}"  Content="{Binding Header}" Tag="{Binding bindingPath}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <GroupBox Header="جمع" Margin="5">
                <ListBox x:Name="SumList" Style="{x:Null}"  MaxHeight="200" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <CheckBox Checked="SumCheckBox_Checked" Unchecked="SumCheckBox_Unchecked" IsChecked="{Binding IsSelected, Mode=TwoWay}"  Content="{Binding Header}" Tag="{Binding bindingPath}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</Local:PopupWindow>
