<Local:RequestFormBase x:Class="CRM.Application.Views.CenterToCenterTranslationSwitchForm"
                   xmlns:Local="clr-namespace:CRM.Application.Local"                   
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:uc="clr-namespace:CRM.Application.UserControls" 
                   WindowStartupLocation="CenterScreen" 
                   Title="سالن سوئیچ" 
                   Loaded="Window_Loaded">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <StackPanel>
            <GroupBox Header="جزئیات برگردان" Name="TranslationInfo">

            </GroupBox>

            <GroupBox Header="جزئیات تخلیه شماره" x:Name="TelephoneDetailGroupBox">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label   Grid.Column="0" Grid.Row="0" Content="فیلتر تلفن : " />
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="FilterTelephonNoTextBox" TextChanged="FilterTelephonNoTextBox_TextChanged"/>

                    <ScrollViewer  Padding="5 5 5 5" Grid.Row="1" Grid.ColumnSpan="4">
                        <DataGrid Grid.Row="0"   x:Name="TelItemsDataGrid" 
                          BorderThickness="0 1 0 0"  
                          AutoGenerateColumns="False"                          
                          CanUserResizeColumns="True"
                          CanUserResizeRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow" 
                          BeginningEdit="TelItemsDataGrid_BeginningEdit"
                          ItemsSource="{Binding}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn      Width="*" Header="شماره تلفن"  Binding="{Binding Path=TelephonNo, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" x:Name="TelephonNoTextColumn"  />
                                
                                <DataGridCheckBoxColumn  Width="*" Header="شماره خاص" Binding="{Binding IsVIP}"  x:Name="IsVIPCheckBoxColumn">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn >
                                
                                <DataGridCheckBoxColumn Width="*" Header="شماره رند" Binding="{Binding IsRound}" x:Name="IsRoundCheckBoxColumn">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn >
                                
                                <DataGridTextColumn     Width="*" Header="مشترک" Binding="{Binding CustomerName}" x:Name="IsRoundTextColumn"/>

                                <DataGridTemplateColumn Width="*" Header="پیش شماره جدید" x:Name="NewPreCodeTemplateColumn" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="NewPreCodeTextBlock"   Text="{Binding Path=NewPreCodeNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox x:Name="NewPreCodeComboBox"  ItemsSource="{Binding _preCodes, RelativeSource={RelativeSource AncestorType=Window}}"  SelectedValue="{Binding Path=NewPreCodeID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="NewPreCodeComboBox_SelectionChanged" Loaded="NewPreCodeComboBox_Loaded"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="*" Header="شماره جدید" x:Name="NewTelephonNoTemplateColumn" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="NewTelephonTextBlock"   Text="{Binding Path=NewTelephonNo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox x:Name="NewTelephonComboBox"  ItemsSource="{Binding _newTelephons, RelativeSource={RelativeSource AncestorType=Window}}"  SelectedValue="{Binding Path=NewTelephonNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" DisplayMemberPath="TelephoneNo" SelectedValuePath="TelephoneNo" SelectionChanged="NewTelephonComboBox_SelectionChanged" Loaded="NewTelephonComboBox_Loaded"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </GroupBox>

            <GroupBox Header="جزئیات انجام " FlowDirection="RightToLeft" Grid.Row="3" Grid.Column="0" x:Name="AccomplishmentGroupBox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label            Grid.Row="0" Grid.Column="0" x:Name="StatusComboBoxLabel" Content="وضعیت" />
                    <ComboBox         Grid.Row="0" Grid.Column="1" x:Name="StatusComboBox" DisplayMemberPath="StatusResult" SelectedValuePath="StepStatusID" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Local:RequestFormBase>
