<Local:RequestFormBase 
                   x:Class="CRM.Application.Views.CenterToCenterTranslatioNetworkForm"
                   xmlns:Local="clr-namespace:CRM.Application.Local"                   
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                   xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                   xmlns:converter="clr-namespace:CRM.Converters" 
                   xmlns:uc="clr-namespace:CRM.Application.UserControls" 
                   WindowStartupLocation="CenterScreen" 
                   Title="شبکه هوایی" 
                   Loaded="Window_Loaded">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <StackPanel>
            <GroupBox Header="جزئیات برگردان" Name="TranslationInfo">

            </GroupBox>

            <GroupBox Header="جزئیات تخلیه اتصالی و مرکزی" x:Name="DetailGroupBox">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label   Grid.Column="0" Grid.Row="0" Content="فیلتر تلفن : " />
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="FilterTelephonNoTextBox" TextChanged="FilterTelephonNoTextBox_TextChanged"/>

                    <ScrollViewer  Padding="5 5 5 5" Grid.Row="1" Grid.ColumnSpan="4">
                        <DataGrid Grid.Row="0"   x:Name="TelItemsDataGrid" 
                          BorderThickness="0 1 0 0"  
                          AutoGenerateColumns="False"                          
                          CanUserResizeColumns="True"
                          CanUserResizeRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow" 
                          BeginningEdit="TelItemsDataGrid_BeginningEdit"
                          ItemsSource="{Binding}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn     Width="*" Header="شماره تلفن"  Binding="{Binding Path=TelephonNo, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"    x:Name="TelephonNoTextColumn"/>
                                <DataGridTextColumn     Width="*" Header="شماره تلفن"  Binding="{Binding Path=NewTelephonNo, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" x:Name="NewTelephonNoTextColumn"/>
                                
                                <DataGridTextColumn     Width="*" Header="مشترک" Binding="{Binding CustomerName}"/>

                                <DataGridTextColumn     Width="*" Header="پست"  Binding="{Binding   Path=PostNumber, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                                <DataGridTextColumn     Width="*" Header="اتصالی"  Binding="{Binding   Path=PostContactNumber,    UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />

                                <DataGridTextColumn     Width="*" Header="ورودی"      Binding="{Binding   Path=NewCabinetInputNumber, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"     x:Name="NewCabinetInputNumberTextcolumn"/>

                                <DataGridTextColumn     Width="*" Header="مرکزی"  Binding="{Binding   Path=CabinetInputNumber,    UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"         x:Name="CabinetInputNumberTextcolumn"/>


                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </GroupBox>

            <GroupBox Header="جزئیات تخلیه پی سی ام" x:Name="PCMGroupBox" Visibility="Collapsed" >
                <ScrollViewer  Padding="5 5 5 5" Grid.Row="1" Grid.ColumnSpan="4">
                    <DataGrid Grid.Row="0"   x:Name="PCMDataGrid" 
                          BorderThickness="0 1 0 0"  
                          AutoGenerateColumns="False"                          
                          CanUserResizeColumns="True"
                          CanUserResizeRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow" 
                          ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn      Width="*" Header="اتصالی"   x:Name="OldPostContactTextColumn" Binding="{Binding Path=PostContactNumber,  UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                            <DataGridTextColumn      Width="*" Header="پی سی ام" x:Name="OldPCMComboBoxColumn"     Binding="{Binding Path=OldPCMName,   UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Header="جزئیات انجام " FlowDirection="RightToLeft" Grid.Row="3" Grid.Column="0" x:Name="AccomplishmentGroupBox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label            Grid.Row="0" Grid.Column="0" x:Name="StatusComboBoxLabel" Content="وضعیت" />
                    <ComboBox         Grid.Row="0" Grid.Column="1" x:Name="StatusComboBox" DisplayMemberPath="StatusResult" SelectedValuePath="StepStatusID" />
                    <Button Content="چاپ" Name="Print" Click="Print_Switch" Grid.Row="2" Grid.Column="6"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Local:RequestFormBase>


