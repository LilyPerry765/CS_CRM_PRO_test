<Local:RequestFormBase x:Class="CRM.Application.Views.InstallmentRequestPaymentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Local="clr-namespace:CRM.Application.Local"
        xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
        xmlns:uc="clr-namespace:CRM.Application.UserControls"
                   Loaded="PopupWindow_Loaded" Closing="PopupWindow_Closing" Width="800"
                   
        Title="اقساط">
    <ScrollViewer FlowDirection="RightToLeft">
        <StackPanel>
            <GroupBox Header="قسط بندی" x:Name="InstallmentGroupBox">
                <Grid x:Name="InstallmentGrid" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>                        
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label    Grid.Row="0" Grid.Column="0" Content="مبلغ پیش پرداخت : "/>
                    <TextBox  Grid.Row="0" Grid.Column="1" x:Name="PrePaymentAmountTextBox" Style="{StaticResource ResourceKey=NumericTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>

                    <Label    Grid.Row="0" Grid.Column="2" Content="تعداد اقساط : " />
                    <TextBox  Grid.Row="0" Grid.Column="3" x:Name="InstallmentCountTextBox" Style="{StaticResource ResourceKey=NumericTextBox}" PreviewTextInput="TextBox_PreviewTextInput" />

                    <Label          Grid.Row="1" Grid.Column="0" Content="شروع اقساط :"/>
                    <cal:DatePicker Grid.Row="1"  Grid.Column="1" x:Name="StartDatePicker" SelectedDateChanged="StartDatePicker_SelectedDateChanged"/>

                    <Label          Grid.Row="1" Grid.Column="2" x:Name="EndDatePickerLabel" Content="پایان اقساط :"/>
                    <cal:DatePicker Grid.Row="1"  Grid.Column="3" x:Name="EndDatePicker"/>
                    
                    <Label    Grid.Row="2" Grid.Column="0" Content="روز شمار :"/>
                    <CheckBox Grid.Row="2" Grid.Column="1" x:Name="DailyCheckBox" IsThreeState="False" VerticalAlignment="Center"/>
                    
                    <Label    Grid.Row="2" Grid.Column="2" Content="دریافت از طریق چک : "/>
                    <CheckBox Grid.Row="2" Grid.Column="3" x:Name="IsChequeCheckBox" IsThreeState="False" VerticalAlignment="Center"/>

                    <!-- Buttons -->
                    <WrapPanel DockPanel.Dock="Bottom" Grid.ColumnSpan="8" Grid.Row="3" Margin="0 10 0 10" HorizontalAlignment="Right">
                        <Button x:Name="SaveButton" IsDefault="True"  Height="30" HorizontalAlignment="Left" Margin="0" Width="80" Content="ذخیره" Click="SaveButton_Click" />
                    </WrapPanel>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="اقساط" x:Name="InstallmentRequestPaymentGroupBox">
                <DataGrid 
                      ItemsSource="{Binding}"      
                      BorderThickness="0 1 0 0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserResizeColumns="True"
                      CanUserResizeRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      x:Name="InstallmentRequestPaymentDataGrid">
                      <DataGrid.ContextMenu>
                        <ContextMenu FontFamily="Tahoma">
                            <MenuItem Header="حذف اقساط" Click="DeleteItem">
                                <MenuItem.Icon>
                                    <Image Source="/CRM.Application;component/Images/delete2_16x16.png" Width="16" Height="16" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="چک" Click="EditItem">
                                <MenuItem.Icon>
                                    <Image Source="/CRM.Application;component/Images/pencil_16x16.png" Width="16" Height="16" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="/CRM.Application;component/Images/element_16x16.png" Width="16" Height="16" HorizontalAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                         </DataGridTemplateColumn>
                         <!--<DataGridTextColumn Header="شناسه" Width="*"  Binding="{Binding ID}" />-->
                         <DataGridTextColumn Header="تاریخ شروع" Width="*" Binding="{Binding StartDate, UpdateSourceTrigger=PropertyChanged , Converter={StaticResource PersianDateConverter}}"/>
                         <DataGridTextColumn Header="تاریخ پایان" Width="*" Binding="{Binding EndDate, UpdateSourceTrigger=PropertyChanged , Converter={StaticResource PersianDateConverter}}"/>
                        <DataGridTextColumn Header="شماره چک" Width="*"  Binding="{Binding ChequeNumber}" Visibility="Collapsed" x:Name="ChequeNumberColumn"/>
                        <DataGridTextColumn Header="مبلغ" Width="*"  Binding="{Binding Cost}"/>
                    </DataGrid.Columns>
                </DataGrid >
            </GroupBox>
            
            <WrapPanel FlowDirection="LeftToRight">
                <TextBox x:Name="SumOfInstallment" />
                <Label Content="جمع اقساط" />

            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Local:RequestFormBase>
