<Local:TabWindow x:Class="CRM.Application.Views.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Local="clr-namespace:CRM.Application.Local" 
        xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
        xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
        mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="800" 
        Loaded="TabWindow_Loaded"
                 Background="White">
    <DockPanel FlowDirection="RightToLeft" >
        <Border DockPanel.Dock="Top" Height="80" Margin="0 0 0 40" BorderBrush="Gray" BorderThickness="0">
            <Border.Background>
                <ImageBrush ImageSource="/CRM.Application;Component/Images/banner_bg.jpg"/>
            </Border.Background>
            <TextBlock Text="داشبورد درخواست" FontFamily="Titr" FontSize="26" Foreground="#355E92" Margin="20 0 0 0" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" Direction="230" Color="Navy" Opacity="0.2" BlurRadius=".8" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="DashboardCounterContainer" Orientation="Vertical"/>
        </ScrollViewer>
    </DockPanel>
</Local:TabWindow>
