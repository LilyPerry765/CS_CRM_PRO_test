<Local:RequestFormBase x:Class="CRM.Application.Views.ADSLAssignmentLines"
                       xmlns:Local="clr-namespace:CRM.Application.Local" 
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:converter="clr-namespace:CRM.Converters" 
                       xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" 
                       WindowStartupLocation="CenterScreen" 
                       Title="واگذاری خطوط ADSL" Height="Auto" Width="800">

    <ScrollViewer  Padding="0 0 10 0" FlowDirection="RightToLeft">
        <DockPanel FlowDirection="RightToLeft">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="مشخصات تلفن" Name="ADSLTelephoneGroupBox" Margin="0,0,0,10">
                    <Grid x:Name="ADSLTelephoneInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="شماره تلفن : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TelephoneNo}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="0" Grid.Column="2" Content="مرکز : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Center}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="کدملی مشترک / شماره ثبت : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NationalCodeOrRecordNo}" Name="NationalCodeTextBox" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="نام مشترک : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CustomerName}" Name="CustomerNameTextBox" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="0" Content="وضعیت متقاضی : " />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TelephoneNo}" Name="ADSLOwnerStatusTextBox" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="2" Content="کد پستی : " />
                        <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding PostalCode}" IsReadOnly="True" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="3" Grid.Column="0" Content="آدرس : " />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Address}" Grid.ColumnSpan="3"  IsReadOnly="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Name="TechnicalInfoGroupBox" Header="مشخصات سرویس ADSL" Margin="0,0,0,10">
                    <Grid Name="ServiceInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نوع سرویس : " />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="ServiceTypeTetxBox" IsReadOnly="True" />

                        <Label Grid.Row="0" Grid.Column="2" Content="نحوه پرداخت هزینه سرویس : " />
                        <TextBox Grid.Row="0" Grid.Column="3" Name="ServiceCostTextBox" IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="0" Content="اولویت مشترک : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Name="CustomerPriorityTextBox" IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="2" Content="نوع پروژه ثبت نام : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Name="RegisterProjectTypeTextBox" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="0" Content="نصب و راه اندازی توسط مخابرات : " />
                        <CheckBox Grid.Row="2" Grid.Column="1" Name="RequiredInstalationCheckBox" VerticalAlignment="Center" IsEnabled="False" />

                        <Label Grid.Row="2" Grid.Column="2" Content="درخواست مودم : " />
                        <CheckBox Grid.Row="2" Grid.Column="3" Name="NeedModemCheckBox" VerticalAlignment="Center" IsEnabled="False" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Name="ADSLTariffGroupBox" Header="تعرفه ADSL" Margin="0,0,0,10">
                    <Grid x:Name="TariffInfo" Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="تعرفه ADSL : " />
                        <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" Text="{Binding Title}" />

                        <Label Grid.Row="1" Grid.Column="0" Content="پهنای باند : " />
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding BandWidth}" />

                        <Label Grid.Row="1" Grid.Column="2" Content="حجم : " />
                        <TextBox Grid.Row="1" Grid.Column="3" IsReadOnly="True" Text="{Binding Traffic}" />

                        <Label Grid.Row="2" Grid.Column="0" Content="مدت استفاده : " />
                        <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding Duration}" />

                        <Label Grid.Row="2" Grid.Column="2" Content="هزینه : " />
                        <TextBox Grid.Row="2" Grid.Column="3" IsReadOnly="True" Text="{Binding Price}" Style="{StaticResource ResourceKey=NumericTextBox}" />

                        <Label Grid.Row="3" Grid.Column="0" Content="شماره نامه مجوز : " Name="LicenceLetterNoLabel" Visibility="Collapsed" />
                        <TextBox Grid.Row="3" Grid.Column="1" Name="LicenceLetterNoTextBox" Visibility="Collapsed" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Header="پورت های موجود">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="نام تجهیزات : " />
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="ADSLEquipmentComboBox" DisplayMemberPath="Equipment" SelectedValuePath="ID" SelectedValue="{Binding ID}" SelectionChanged="ADSLEquipmentComboBox_SelectionChanged" />

                        <Label Grid.Row="0" Grid.Column="2" Content="کلیه بوخت ها : " />
                        <CheckBox Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Name="AlBuchtCheckBox" Checked="AlBuchtCheckBox_Checked" Unchecked="AlBuchtCheckBox_Unchecked"/>

                        <DataGrid x:Name="ADSLPortDataGrid" Grid.Row="2" Grid.ColumnSpan="4"
                              DockPanel.Dock="Bottom"
                              BorderThickness="0 1 0 0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserResizeColumns="True"
                              CanUserResizeRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              ItemsSource="{Binding}"
                              IsReadOnly="True"
                              SelectionChanged="ADSLPortDataGrid_SelectionChanged">

                            <DataGrid.Columns>

                                <!--<DataGridTextColumn Header=" شناسه " Width="50" Binding="{Binding Path=ID, UpdateSourceTrigger=PropertyChanged}" />-->
                                <DataGridTextColumn Header=" شماره پورت " Width="auto" Binding="{Binding Path=PortNo, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridComboBoxColumn Header=" وضعیت " Width="100" SelectedValueBinding="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ID" DisplayMemberPath="Name" x:Name="StatusColumn"/>
                                <DataGridTextColumn Header=" بوخت ورودی " Width="250" Binding="{Binding Path=InputBuchtConnection, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header=" بوخت خروجی " Width="250" Binding="{Binding Path=OutputBuchtConnection, UpdateSourceTrigger=PropertyChanged}"  />

                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="4" Header="پورت انتخابی">
                    <Grid Name="PortInfo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0" Source="/CRM.Application;component/Images/info_16x16.png" Width="16" Height="16" HorizontalAlignment="Left" />
                        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="SavedValueLabel" Content="     نمایش پورت ذخیره شده" Style="{StaticResource ResourceKey=HyperLink}"  Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" MouseLeftButtonDown="SavedValueLabel_MouseLeftButtonDown" Margin="0,0,10,0"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="نام تجهیزات : " />
                        <TextBox Grid.Row="1" Grid.Column="1" Name="WquipmentTextBox" Text="{Binding EquipmentName}" IsReadOnly="True" />

                        <Label Grid.Row="1" Grid.Column="2" Content="شماره پورت : " />
                        <TextBox Grid.Row="1" Grid.Column="3" Name="PortNoTextBox" Text="{Binding PortNo}" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="0" Content="بوخت ورودی : "/>
                        <TextBox Grid.Row="2" Grid.Column="1"  Name="InputBuchtTextBox" Text="{Binding InputBuchtConnection}" IsReadOnly="True" />

                        <Label Grid.Row="2" Grid.Column="2" Content="بوخت خروجی : "/>
                        <TextBox Grid.Row="2" Grid.Column="3"  Name="OutputBuchtTextBox" Text="{Binding OutputBuchtConnection}" IsReadOnly="True" />
                    </Grid>
                </GroupBox>

            </Grid>            
        </DockPanel>        
    </ScrollViewer>

</Local:RequestFormBase>