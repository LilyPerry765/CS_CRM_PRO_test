    <Style x:Key="SearchExpander" TargetType="{x:Type Expander}">
        <Setter Property="BorderBrush" Value="{StaticResource SkyTopDowonGradientBrush}" />
        <Setter Property="Background" Value="{StaticResource CalmBlueGradientBrush}" />
        <Setter Property="BorderThickness" Value="1" />
