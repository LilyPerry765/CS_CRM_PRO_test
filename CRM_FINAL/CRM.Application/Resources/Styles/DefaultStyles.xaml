        <Setter Property="BorderBrush" Value="#DBDBDB" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="Background" Value="White" />
        <Setter Property="SelectedDateFormat" Value="Long"/>
    </Style>

    <Style TargetType="{x:Type ComboBox}">
