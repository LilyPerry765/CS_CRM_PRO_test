<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Local="clr-namespace:CRM.Application.Local" xmlns:Customcontrols="clr-namespace:CRM.Application.Codes.CustomControls;assembly=CRM.Application"  xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" xmlns:UserControls="clr-namespace:CRM.Application.UserControls">
    
    <Style TargetType="{x:Type Customcontrols:ImageButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Customcontrols:ImageButton}">
                    <Button Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" Margin="{TemplateBinding Margin}">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Image Source="{TemplateBinding Image}" Width="{TemplateBinding ImageWidth}"
                                   Height="{TemplateBinding ImageHeight}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type Customcontrols:ExtendedMenuItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Customcontrols:ExtendedMenuItem}">
                    <Grid FlowDirection="RightToLeft" Margin="{TemplateBinding Margin}" Background="{TemplateBinding Background}" Cursor="Hand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{TemplateBinding Image}" Height="{TemplateBinding ImageHeight}" Width="{TemplateBinding ImageWidth}" VerticalAlignment="Center"/>

                        <TextBlock Text="{TemplateBinding Text}" Grid.Column="1" TextWrapping="Wrap" Margin="2.5"
                                   FontFamily="{TemplateBinding FontFamily}" FontSize="{TemplateBinding FontSize}"/>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="PagerNormalBlueBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#AAD3E6" />
