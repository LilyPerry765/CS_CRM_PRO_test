    <Style TargetType="{x:Type GroupBox}" x:Key="BlueGroupBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GroupBox}">
                    <DockPanel DockPanel.Dock="Top" Margin="0 20 0 0">
                        <Border DockPanel.Dock="Top" Margin="20 0 0 -1" Padding="20 1 20 4" HorizontalAlignment="Left" BorderThickness="1 1 1 0" BorderBrush="#7FCEFE" Opacity="1" Height="25">
                            <Border.Background>
                                <ImageBrush ImageSource="/CRM.Application;Component/Images/legend-bg.png" TileMode="FlipX" />
                            </Border.Background>
                            <TextBlock FontFamily="/CRM.Application;Component/Resources/Fonts/#Nazanin" FontWeight="Bold" FontSize="14" Foreground="#355E92" VerticalAlignment="Center" Padding="5 0 5 0" Text="{TemplateBinding Header}">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="1" Direction="230" Color="Navy" Opacity="0.1" BlurRadius="1" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </Border>
                        <Border BorderThickness="0 3 0 0" BorderBrush="#7FCEFE">
                            <Border BorderThickness="1 0 1 1" BorderBrush="#a6ddff" Background="White">
                                <ContentPresenter />
                            </Border>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

