<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.ExchangeCabinetInputReportUserControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"          
             xmlns:Local="clr-namespace:CRM.Application.Local" 
             mc:Ignorable="d">
    <StackPanel FlowDirection="RightToLeft">
        <Grid FlowDirection="RightToLeft">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="شهر:" />
            <UserControls:CheckableComboBox x:Name="CityComboBox" Grid.Column="2"/>

            <Label Content="مرکز:" Grid.Column="4"/>
            <UserControls:CheckableComboBox x:Name="CenterComboBox" Grid.Column="6"/>

            <Label Content="از کافو:" Grid.Row="2"/>
            <TextBox Name="FromCafu" Grid.Row="2" Grid.Column="2"/>

            <Label Content="تا کافو:" Grid.Row="2" Grid.Column="4"/>
            <TextBox Name="ToCafu" Grid.Column="6" Grid.Row="2"/>

            <Label Content="از تاریخ:" Grid.Row="4" />
            <cal:DatePicker x:Name="FromDate" Grid.Row="4" Grid.Column="2"/>

            <Label Content="تا تاریخ:" Grid.Row="4" Grid.Column="4"/>
            <cal:DatePicker x:Name="ToDate" Grid.Row="4" Grid.Column="6"/>
        </Grid>
    </StackPanel>
    </Local:ReportBase>

