<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.ADSLExpirationDateAndLastServiceTelephoneNoReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"          
             xmlns:Local="clr-namespace:CRM.Application.Local" 
             mc:Ignorable="d">
    <StackPanel FlowDirection="RightToLeft">
        <GroupBox BorderBrush="AliceBlue" Header="انتخاب شهر و مرکز" >
            <UserControls:CityCenterUserControl Orientation="Horizontal"  x:Name="CityCenterComboBox"/>
        </GroupBox>
        <GroupBox BorderBrush="AliceBlue">
            <Grid FlowDirection="RightToLeft">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    
                </Grid.ColumnDefinitions>

                <Label Content="شماره تلفن :" Name="TelNoLabel" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="TelNoTextBox" Grid.Row="0" Grid.Column="2"/>
                
                <Label Content="از تاریخ:" Grid.Column="0" Grid.Row="2"/>
                <cal:DatePicker Name="fromDate" Grid.Column="2" Grid.Row="2"/>
                
                <Label Content="تا تاریخ:" Grid.Column="4" Grid.Row="2"/>
                <cal:DatePicker Name="toDate" Grid.Column="6" Grid.Row="2"/>

                <Label Content="تعداد روز سپری شده از زمان انقضا:" Grid.Row="4"/>
                <TextBox Grid.Column="2" Grid.Row="4" Name="PassedDaysTextBox"/>

                <Label Content="تعداد روز باقی مانده تا زمان انقضا:" Grid.Row="4" Grid.Column="4"/>
                <TextBox  Grid.Row="4" Name="RemainDaysTextBox" Grid.Column="6"/>

                <Label Content="MDF دارای پورت:" Grid.Row="6" Grid.Column="0"/>
                <CheckBox Name="HasPortCheckBox" Grid.Row="6" Grid.Column="2" IsChecked="{x:Null}" VerticalAlignment="Center"/>

            </Grid>
        </GroupBox>
    </StackPanel>
</Local:ReportBase>
