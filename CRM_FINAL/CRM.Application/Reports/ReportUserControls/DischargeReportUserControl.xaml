<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.DischargeReportUserControl"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"          
             xmlns:Local="clr-namespace:CRM.Application.Local" 
             mc:Ignorable="d">

    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label      Content="شهر :"  Grid.Row="0" Grid.Column="0"/>
        <UserControls:CheckableComboBox x:Name="CityComboBox" Grid.Row="0" Grid.Column="2"  LostFocus="CityCheckableComboBox_LostFocus_1"/>

        <Label   Content="مرکز :"   Grid.Row="0" Grid.Column="4"/>
        <UserControls:CheckableComboBox x:Name="CenterComboBox" Grid.Row="0" Grid.Column="6"/>
        
        <Label Content="نوع تلفن :" Name="TelephoneTypeLabel" Grid.Row="2" Grid.Column="0"/>
        <UserControls:CheckableComboBox x:Name="TelephoneTypeComboBox" Grid.Row="2" Grid.Column="2" LostFocus="TelephoneTypeComboBox_LostFocus_1" />
        
        <Label Content="نوع گروه تلفن :" Name="TelephoneTypeGroupLabel" Grid.Row="2" Grid.Column="4"/>
        <UserControls:CheckableComboBox x:Name="TelephoneTypeGroupComboBox" Grid.Row="2" Grid.Column="6"/>
        
        <Label Content="از شماره تلفن :" Grid.Row="4" Name="FromTelNoLabel" />
        <TextBox Name="FromTelNoTextBox" Grid.Column="2" Grid.Row="4"/>
        
        <Label Content="تا شماره تلفن :" Grid.Row="4"  Grid.Column="4" Name="ToTelNoLabel" />
        <TextBox Name="ToTelNoTextBox"    Grid.Row="4" Grid.Column="6" />

        <Label Content="از تاریخ:"       Grid.Row="6" Grid.Column="0"/>
        <cal:DatePicker x:Name="fromDate" Grid.Row="6" Grid.Column="2"/>

        <Label Content="تا تاریخ :"      Grid.Row="6" Grid.Column="4"/>
        <cal:DatePicker x:Name="toDate"   Grid.Row="6" Grid.Column="6" />
        
        <Label Content="علت تخلیه :"   Grid.Row="8"/>
        <UserControls:CheckableComboBox Grid.Row="8" x:Name="DischargeReasonComboBox" Grid.Column="2" />
    </Grid>
    </Local:ReportBase>