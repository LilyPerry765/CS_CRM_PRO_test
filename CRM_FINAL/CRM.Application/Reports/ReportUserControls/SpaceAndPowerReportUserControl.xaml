<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.SpaceAndPowerReportUserControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"          
             xmlns:Local="clr-namespace:CRM.Application.Local"
             mc:Ignorable="d">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Header=" انتخاب تاریخ ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="از تاریخ : " VerticalAlignment="Center" Width="100"/>
                <cal:DatePicker Grid.Row="0" Grid.Column="1" x:Name="FromDate"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="تا تاریخ : " VerticalAlignment="Center" Width="100"/>
                <cal:DatePicker Grid.Row="0" Grid.Column="4" x:Name="ToDate"/>

            </Grid>
        </GroupBox>

        <!--<GroupBox Grid.Row="2" Grid.Column="0" Header=" انتخاب مشترک ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="27"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="نام مشترک : " VerticalAlignment="Center" Width="100"/>
                <UserControls:CheckableComboBox Grid.Row="0" Grid.Column="1" x:Name="CustomerTitleComboBox"/>

            </Grid>
        </GroupBox>-->

        <GroupBox Grid.Row="4" Grid.Column="0" Header="مشخصات گزارش ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                   
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                

                <TextBlock Grid.Row="0" Grid.Column="0" Text="شماره درخواست : " VerticalAlignment="Center" Width="100"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtRequestNo"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="متراژ فضا - متر مربع : " VerticalAlignment="Center" Width="100"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtSpaceSize"/>

                <TextBlock Grid.Row="2" Grid.Column="3" Text="نوع فضا : " VerticalAlignment="Center" Width="100"/>
                <UserControls:CheckableComboBox Grid.Row="2" Grid.Column="4" x:Name="SpaceTypeComboBox"/>
                
                <TextBlock Grid.Row="4" Grid.Column="0" Text="نوع تجهیزات:" VerticalAlignment="Center" Width="100"/>
                <UserControls:CheckableComboBox Grid.Row="4" Grid.Column="1" x:Name="EquipmentTypeComboBox"/>

                <TextBlock Grid.Row="4" Grid.Column="3" Text="نوع پاور:" VerticalAlignment="Center" Width="100"/>
                <UserControls:CheckableComboBox Grid.Row="4" Grid.Column="4" x:Name="PowerTypeComboBox"/>


            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="6" Grid.Column="0" Header=" انتخاب مرکز ">
            <UserControls:RegionCenterUserControl x:Name="regionCenterUserControl"/>
            
        </GroupBox>

        

    </Grid>
</Local:ReportBase>
