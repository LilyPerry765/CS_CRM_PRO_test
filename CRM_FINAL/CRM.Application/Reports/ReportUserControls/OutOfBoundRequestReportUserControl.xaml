<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.OutOfBoundRequestReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
             xmlns:Local="clr-namespace:CRM.Application.Local"
             mc:Ignorable="d" >
    <StackPanel FlowDirection="RightToLeft">
        
        <GroupBox Header="انتخاب شهر و مرکز">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="شهر : "/>
                <ComboBox x:Name="CitiesComboBox" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="CitiesComboBox_SelectionChanged"/>

                <Label Grid.Row="0" Grid.Column="3" Content="مرکز : "/>
                <ComboBox x:Name="CentersComboBox" Grid.Row="0" Grid.Column="4" DisplayMemberPath="Name" SelectedValuePath="ID"/>

            </Grid>
        </GroupBox>
        
        <GroupBox Header="انتخاب تاریخ">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Label Grid.Row="0" Grid.Column="0" Content="تاریخ درج خارج از مرز - از : "/>
                <cal:DatePicker x:Name="FromDatePicker" Grid.Row="0" Grid.Column="1"/>

                <Label Grid.Row="0" Grid.Column="3" Content="تاریخ درج خارج از مرز - تا : "/>
                <cal:DatePicker x:Name="ToDatePicker" Grid.Row="0" Grid.Column="4"/>

            </Grid>
        </GroupBox>
        
        <GroupBox Header="انتخاب مشخصات گزارش">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="نوع درخواست : "/>
                <ComboBox x:Name="RequestTypesComboBox" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="ID"/>

                <Label Grid.Row="0" Grid.Column="3" Content="وضعیت اتمام درخواست : "/>
                <ComboBox x:Name="RequestCompletionStatusComboBox" Grid.Row="0" Grid.Column="4" DisplayMemberPath="Name" SelectedValuePath="ID"/>

                <Label Grid.Row="2" Grid.Column="0" Content="متراژ خارج از مرز بیشتر از : "/>
                <TextBox x:Name="OutOfBoundMeterTextBox" Grid.Row="2" Grid.Column="1"/>
                
            </Grid>
        </GroupBox>
    </StackPanel>
</Local:ReportBase>
