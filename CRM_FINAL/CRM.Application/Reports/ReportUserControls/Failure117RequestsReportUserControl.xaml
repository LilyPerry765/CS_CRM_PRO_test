<Local:ReportBase x:Class="CRM.Application.Reports.ReportUserControls.Failure117RequestsReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Local="clr-namespace:CRM.Application.Local"
             xmlns:UserControls="clr-namespace:CRM.Application.UserControls"
             xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <UserControls:RequestPropertiesUserControl x:Name="RequestPropertisUC" Grid.Column=" 0" Grid.Row=" 0" Grid.ColumnSpan="5" />
        <GroupBox Grid.Row="2" Grid.Column="0" Header=" مشخصات خرابی ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="شماره ردیف از : " VerticalAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                <TextBox Name="RowNoFromTextBox" Grid.Column="1" Grid.Row="0"  />

                <TextBlock Grid.Row="0" Grid.Column="3" Text="شماره ردیف تا : " VerticalAlignment="Center"/>
                <TextBox Name="RowNoToTextBox" Grid.Column="4" Grid.Row="0" PreviewTextInput="NumberValidationTextBox" />
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="وضعیت اولیه خط : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox Grid.Row="2" Grid.Column="1" x:Name="LineStatusCheckableCombobox"/>

                <TextBlock Grid.Row="2" Grid.Column="3" Text="وضعیت  خرابی : " VerticalAlignment="Center" />
                <UserControls:CheckableComboBox Grid.Row="2" Grid.Column="4" x:Name="FailureStatusCheckableCombobox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text=" وضعیت درخواست خرابی : " VerticalAlignment="Center"/>
                <ComboBox Name="FailureCombobox" Grid.Column="1" Grid.Row="4" SelectedValuePath="ID" DisplayMemberPath="Name" Height="26" VerticalAlignment="Bottom"/>
                
                <TextBlock Grid.Row="4" Grid.Column="3" Text=" نام مامور شبکه : " VerticalAlignment="Center"/>
                <ComboBox Name="ContractorOfficerCombobox" Grid.Column="4" Grid.Row="4" SelectedValuePath="ID" DisplayMemberPath="Name" Height="26" VerticalAlignment="Bottom"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="از سرعت رفع خرابی  : " VerticalAlignment="Center"/>
                <TextBox Name="PerformanceWiringNetworkFromTextBox" Grid.Column="1" Grid.Row="6"  PreviewTextInput="NumberValidationTextBox" >
                    
                </TextBox> 

                <TextBlock Grid.Row="6" Grid.Column="3" Text=" تا سرعت رفع خرابی : " VerticalAlignment="Center" />
                <TextBox Name="PerformanceWiringNetworkToTextBox" Grid.Column="4" Grid.Row="6"  PreviewTextInput="NumberValidationTextBox" />
                

            </Grid>
        </GroupBox>
        
    </Grid>
</Local:ReportBase>
