<UserControl x:Class="CRM.Application.UserControls.InvestigateInfoSummary" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" mc:Ignorable="d" d:DesignWidth="820"
             
             Loaded="LoadData">

    <Grid  Name="InvestigateInfo" FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" x:Name="CabinetLabel"  Content="کافو" />
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="CabinetTextBox"  Text="{Binding Cabinet}" />


        <Label Grid.Column="2" Grid.Row="0"  x:Name="PostLabel" Content="پست"  />
        <TextBox Grid.Column="3" Grid.Row="0" x:Name="PostTextBox"  Text="{Binding Post}" />

        <!--<Label Grid.Row="0" Grid.Column="4" x:Name="ReserveDateLabel" Content="تاریخ رزرو امکانات"  />
            <cal:DatePicker Grid.Row="0" Grid.Column="5" x:Name="ReserveDateDatePicker" SelectedDate="{Binding ConnectionReserveDate}"  />-->


        <Label Grid.Column="0" Grid.Row="1" x:Name="MDFLabel"  Content="ام دی اف"  />
        <TextBox Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="3" x:Name="MDFTextBox"   Text="{Binding MDF}"/>

        <Label Grid.Column="2" Grid.Row="1"   x:Name="BuchtInfoLabel" Content="مشخصه بوخت"  />
        <TextBox Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="3" x:Name="BuchtInfoTextBox"  Text="{Binding BuchtInfo}"/>

    </Grid>
</UserControl>
