<UserControl x:Class="CRM.Application.UserControls.Pager" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Height="Auto" Margin="5" FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="صفحه" FontFamily="/CRM.Application;component/Resources/Fonts/#Nazanin" FontSize="16" FontWeight="Bold" Foreground="#355e92" HorizontalAlignment="Right" VerticalAlignment="Center" />

        <Border Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBox x:Name="CurrentPageNumberTextBox" Text="1" Background="Transparent" BorderThickness="0" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="/CRM.Application;component/Resources/Fonts/#Yekan" FontSize="12" TextChanged="CurrentPageNumberTextBox_TextChanged" />
        </Border>

        <TextBlock Grid.Column="4" Text="از" FontFamily="/CRM.Application;component/Resources/Fonts/#Nazanin" FontSize="16" FontWeight="Bold" Foreground="#355e92" HorizontalAlignment="Right" VerticalAlignment="Center" />

        <Border Grid.Column="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 0 20 0">
            <TextBox x:Name="TotalPagesTextBox" Text="1" Background="Transparent" BorderThickness="0" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="/CRM.Application;component/Resources/Fonts/#Yekan" FontSize="12" IsReadOnly="True" />
        </Border>
        <MenuItem Grid.Column="8" Background="Transparent" Padding="5 4 5 4" Click="ChangePage" CommandParameter="-1">
            <MenuItem.Icon>
                <Image Source="/CRM.Application;component/Images/next_16x16.png" Width="16" Height="16" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Grid.Column="10" Background="Transparent" Padding="5 4 5 4" Click="ChangePage" CommandParameter="1">
            <MenuItem.Icon>
                <Image Source="/CRM.Application;component/Images/previous_16x16.png" Width="16" Height="16" />
            </MenuItem.Icon>
        </MenuItem>
        <TextBlock Grid.Column="12" Text="تعداد رکوردها" FontFamily="/CRM.Application;component/Resources/Fonts/#Nazanin" FontSize="16" FontWeight="Bold" Foreground="#355e92" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20 0 0 0" />

        <Border Grid.Column="14" HorizontalAlignment="Left"  VerticalAlignment="Center">
            <TextBox x:Name="TotalRecordsTextBox" Text="0" Background="Transparent" BorderThickness="0" TextAlignment="Center" VerticalAlignment="Center"  HorizontalAlignment="Center" FontFamily="/CRM.Application;component/Resources/Fonts/#Yekan"  FontSize="12" IsReadOnly="True"/>
        </Border>
    </Grid>
</UserControl>