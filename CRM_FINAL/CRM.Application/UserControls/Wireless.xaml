             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:cal="http://schemas.microsoft.com/wpf/2008/datepicker" Loaded="UserControl_Loaded">
    
        <StackPanel FlowDirection="RightToLeft">
            <!--<GroupBox x:Name="TelephoneNumberGroupBox" Margin="10" Header="تلفن" Visibility="Visible" >
                <Grid>
                    <Grid.RowDefinitions>
