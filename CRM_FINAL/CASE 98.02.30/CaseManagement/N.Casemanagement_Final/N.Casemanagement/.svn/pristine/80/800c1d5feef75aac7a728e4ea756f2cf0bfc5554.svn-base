@{
    Layout = "";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head  >
    <title></title>
   @using Stimulsoft.Report.Mvc; 
</head>
<body>
    <table>
        <tr>             
            <td style="width: 100%;" valign="top">
               @Html.Stimulsoft().StiMvcViewer("MvcMobileViewer1", new StiMvcViewerOptions()
                {
                    Theme = StiTheme.Office2007Blue,
                    Appearance =
                    {
                        FullScreenMode = true,
                        InterfaceType = StiInterfaceType.Auto,
                        RightToLeft = true,
                        ShowTooltips = true,
                        ScrollbarsMode = true
                    },
                     Toolbar =
                     {
                          ViewMode= StiWebViewMode.WholeReport,
                          ShowAboutButton = false,
                          ShowFullScreenButton = true,
                     },
                   // Localization = "~/Content/Localization/fa.xml",
                    Actions =
                    {
                        GetReportSnapshot = "GetReport",
                        ViewerEvent = "ViewerEvent",

                    },
                })
            </td>
        </tr>
    </table>

</body>
</html>
