@section ContentHeader {
    <!--<h1>@LocalText.Get("Navigation.Dashboard")<small>@Html.Raw(Texts.Site.Dashboard.ContentDescription)</small></h1>-->
}

<div class="row" style="text-align: center;">
    <div class="col-lg-3 col-xs-6" id="Recovered_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>مبلغ مصوب</h4>

            </div>
            <div dir="ltr" id="Recovered_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>

            <div><canvas id="gauge-Recovered"></canvas></div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6" id="Recoverable_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>نشتی قابل وصول</h4>
            </div>
            <div dir="ltr" id="Recoverable_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>
            <div>
                <canvas id="gauge-Recoverable"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6" id="Total_Leakage_box">
        <!-- small box -->
        <div class="small-box bg-gray-light ">
            <div class="inner" style="color:black;">
                <h4>نشتی کل</h4>
            </div>

            <div dir="ltr" id="TotalLeakage_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>
            <div>
                <canvas id="gauge-TotalLeakage"></canvas>
            </div>
        </div>
    </div>
    <div class=" col-lg-3 col-xs-6" id="Program_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>برنامه هدف</h4>
            </div>
            <div dir="ltr" id="Program_SevenSegment" style="width:57%;height:60%;margin:0 auto;"></div>
            <div>
                <canvas id="Progress_bar"></canvas>
            </div>

        </div>
    </div>

</div>
<div class="row">
    <section class="col-lg-6 connectedSortable">

        <!-- Map box -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <i class="fa fa-map-marker"></i>
                <h3 class="box-title">نقشه استانها </h3>
            </div>
            <div class="box-body">
                <div id="map" style="height: 540px; width: 100%;"></div>  <!-- Original height: 250px -->
                <div id="x"></div><div id="y"></div>
                <div id="customTip" class="jvectormap-tip"></div>
            </div><!-- /.box-body-->
            <div class="box-footer with-border">
                <div class="row">
                    <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
                        <div id="sparkline-1"></div>
                        <div class="knob-label">Visitors</div>
                    </div>
                    <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
                        <div id="sparkline-2"></div>
                        <div class="knob-label">Online</div>
                    </div>
                    <div class="col-xs-4 text-center">
                        <div id="sparkline-3"></div>
                        <div class="knob-label">Exists</div>
                    </div>
                </div>
            </div>
        </div>

    </section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-6 connectedSortable">

        <!-- Calendar -->
        <div class="box box-success">
            <div class="box-header with-border">
                <i class="fa fa-calendar"></i>
                <h3 class="box-title">تقویم</h3>
            </div>
            <div class="box-body no-padding">
                <!-- THE CALENDAR -->
                <div id="calendar"></div>
            </div><!-- /.box-body -->
            <div class="box-footer no-border">
                <div class="row">
                    <div class="col-md-6">
                        <div id="external-events">
                            <div class="external-event bg-green">رویداد پیش فرض</div>
                            <div class="checkbox">
                                <label for="drop-remove">
                                    پاک کردن بعد از اضافه کردن &nbsp;
                                    <input type="checkbox" id="drop-remove">
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <input id="new-event" type="text" class="form-control" placeholder="نام رویداد">
                            <div class="input-group-btn">
                                <button id="add-new-event" type="button" class="btn btn-primary btn-flat">اضافه کردن</button>
                            </div><!-- /btn-group -->
                        </div><!-- /input-group -->
                        <div class="btn-group" style="width: 100%; margin-bottom: 10px;">
                            <ul class="fc-color-picker" id="color-chooser">
                                <li><a class="text-blue" href="#"><i class="fa fa-square"></i></a></li>
                                <li><a class="text-orange" href="#"><i class="fa fa-square"></i></a></li>
                                <li><a class="text-green" href="#"><i class="fa fa-square"></i></a></li>
                                <li><a class="text-red" href="#"><i class="fa fa-square"></i></a></li>
                            </ul>
                        </div>

                    </div><!-- /.col -->
                </div>
            </div><!-- /.row -->
        </div>

    </section><!-- right col -->


</div>
