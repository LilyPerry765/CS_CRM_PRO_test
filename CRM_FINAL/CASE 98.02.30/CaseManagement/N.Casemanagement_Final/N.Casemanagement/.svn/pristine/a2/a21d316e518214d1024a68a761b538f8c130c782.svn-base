<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h4>@Model.PenddingRequestCount</h4>
                <p>فعالیت های جاری</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Case/ActivityRequestPendding" class="small-box-footer"><i class="fa fa-arrow-circle-left"></i> مشاهده لیست </a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h4>@Model.ConfirmRequestCount</h4>
                <p> فعالیت های تایید شده سال ۹۶</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="~/Case/ActivityRequestConfirm" class="small-box-footer"><i class="fa fa-arrow-circle-left"></i> مشاهده لیست </a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h4>@Model.FinancialRequestCount</h4>
                <p>در دست اقدام مالی</p>
            </div>
            <div class="icon">
                <i class="ion ion-archive"></i>
            </div>
            <a href="~/Case/ActivityRequestFinancial" class="small-box-footer"><i class="fa fa-arrow-circle-left"></i> مشاهده لیست </a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h4>@Model.TechnicalRequestCount</h4>
                <p>در دست اقدام فنی</p>
            </div>
            <div class="icon">
                <i class="ion ion-bookmark"></i>
            </div>
            <a href="~/Case/ActivityRequestTechnical" class="small-box-footer"><i class="fa fa-arrow-circle-left"></i> مشاهده لیست </a>
        </div>
    </div>
</div>


<div class="row" style="text-align: center;">
    <div class="col-lg-3 col-xs-6" id="Recovered_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>مبلغ مصوب</h4>

            </div>
            <div dir="ltr" id="Recovered_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>

            <div><canvas id="gauge-Recovered"></canvas></div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6" id="Recoverable_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>نشتی قابل وصول</h4>
            </div>
            <div dir="ltr" id="Recoverable_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>
            <div>
                <canvas id="gauge-Recoverable"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6" id="Total_Leakage_box">
        <!-- small box -->
        <div class="small-box bg-gray-light ">
            <div class="inner" style="color:black;">
                <h4>نشتی کل</h4>
            </div>

            <div dir="ltr" id="TotalLeakage_SevenSegment" style="width: 50%;height:50%; margin: 0 auto;"></div>
            <div>
                <canvas id="gauge-TotalLeakage"></canvas>
            </div>
        </div>
    </div>
    <div class=" col-lg-3 col-xs-6" id="Program_box">
        <!-- small box -->
        <div class="small-box bg-gray-light">
            <div class="inner" style="color:black;">
                <h4>برنامه هدف</h4>
            </div>
            <div dir="ltr" id="Program_SevenSegment" style="width:50%;height:500%;margin:0 auto;"></div>
            <div>
                <canvas id="Progress_bar"></canvas>
            </div>

        </div>
    </div>

</div>

