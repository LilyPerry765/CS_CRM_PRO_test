<Window x:Class="CRMConvertApplication.InstalForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InstalForm" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="StartButton" Click="StartButton_Click" Width="100" Height="50" Content="Start"  />
        <Button Name="PaidButton" Click="PaidButton_Click" Width="100" Height="50" Content="Paid" Grid.Row="1" />
        <Button Name="InstalmentButton" Click="InstalmentButton_Click" Width="100" Height="50" Content="Instalment" Grid.Row="2" />
    </Grid>
</Window>
